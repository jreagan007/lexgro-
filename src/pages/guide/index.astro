          {regularGuides.map((guide) => (
            <a href={`/guide/${guide.data.slug}/`} class="guide-card">
              <div class="card-image">
                <img
                  src={getGuideCardImage(guide.data.slug)}
                  alt={guide.data.title}
                  width="400"
                  height="225"
                  class="card-img"
                  loading="lazy"
                />
              </div>
              <div class="card-content">
                <span class="guide-category">Guide</span>
                <h3 class="card-title">{guide.data.title}</h3>
                <p class="card-excerpt">{guide.data.description}</p>
                <span class="guide-date">{formatDate(guide.data.pubDate)}</span>
