---
/**
 * ServiceLayout - For service pages (2000-2500 words)
 * Features: Pricing, features list, strong CTAs
 */
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  heroImage?: string;
}

const { title, description, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="service-article">
    <header class="service-header">
      <div class="container">
        <p class="service-label">Our Services</p>
        <h1>{title}</h1>
        <p class="service-description">{description}</p>
        <div class="service-cta-row">
          <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary">
            Schedule Free Consultation
          </a>
          <a href="#features" class="btn btn-secondary">
            Learn More
          </a>
        </div>
      </div>
    </header>

    <div class="service-content container">
      <div class="service-body prose" id="features">
        <slot />
      </div>
    </div>

    <footer class="service-footer">
      <div class="container">
        <div class="final-cta">
          <h2>Ready to Get Started?</h2>
          <p>Schedule a free strategy call to discuss how we can help your law firm grow.</p>
          <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
            Book Your Free Call
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .service-header {
    background: var(--color-bg-dark);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
  }

  .service-label {
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .service-header h1 {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    line-height: 1.15;
    margin-bottom: 1.25rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .service-description {
    font-size: 1.25rem;
    color: #b0b8b3;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .service-cta-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .service-content {
    padding: 4rem 0;
  }

  .service-body {
    max-width: 800px;
    margin: 0 auto;
  }

  .service-footer {
    background: var(--color-bg-light);
    padding: 5rem 0;
  }

  .final-cta {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .final-cta h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .final-cta p {
    font-size: 1.125rem;
    color: #4b5563;
    margin-bottom: 2rem;
  }
</style>
