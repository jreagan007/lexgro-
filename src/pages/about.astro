---
/**
 * About Page
 *
 * Showcases LEXGRO's mission, Keith Dyer's bio, and company values.
 * Designed to build trust and demonstrate expertise.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Images
import keithPhoto from '../assets/images/sections/keith-cmo-photo.png';
import aboutEditorial from '../assets/images/editorial/about.png';
import heroBackground from '../assets/images/heroes/about-hero.jpg';

// Testimonial images for social proof
import clarkeSpeaks from '../assets/images/testimonials/clarke-speaks.png';
import matthewAlbrecht from '../assets/images/testimonials/matthew-albrecht.webp';
import barrySiegel from '../assets/images/testimonials/barry-siegel.jpg';

const stats = [
  { value: '$3M → $11M', label: 'Revenue Growth Achieved' },
  { value: '100+', label: 'Law Firms Served' },
  { value: '6+', label: 'Practice Areas' },
  { value: '15+', label: 'Years Experience' },
];

const values = [
  {
    title: 'Aligned Interests Above All',
    description: 'We succeed when you succeed. We tie our incentives to your outcomes, not vanity metrics.',
    icon: 'handshake',
  },
  {
    title: 'Objectivity Over Ego',
    description: 'We tell you what works, even when it\'s not what you want to hear.',
    icon: 'eye',
  },
  {
    title: 'Execution Is the Strategy',
    description: 'Plans are worthless without implementation. We don\'t just consult. we do the work.',
    icon: 'wrench',
  },
  {
    title: 'Accountability Through Data',
    description: 'We ground every recommendation in performance. We measure, adjust, and optimize.',
    icon: 'chart',
  },
  {
    title: 'Ethical Conduct, Always',
    description: 'No misleading claims. No inflated promises. No cutting corners.',
    icon: 'shield',
  },
  {
    title: 'Respect for People',
    description: 'We honor your time, your team, and your vision for your firm.',
    icon: 'users',
  },
  {
    title: 'Trusted Partners Only',
    description: 'We only recommend vendors, employees, and tools we\'ve personally vetted.',
    icon: 'check-circle',
  },
  {
    title: 'Professional Communication',
    description: 'Clear, timely, and actionable updates. always.',
    icon: 'message',
  },
  {
    title: 'Intentional Growth',
    description: 'Growth for growth\'s sake is chaos. We build for scale, durability, and long-term value.',
    icon: 'target',
  },
];

const expertise = [
  'Law Firm Marketing Strategy',
  'Fractional CMO Services',
  'SEO and Content Marketing',
  'PPC and Media Buying',
  'Intake Optimization',
  'Team Training and Development',
  'Vendor Management',
  'Marketing ROI Analysis',
];
---

<BaseLayout
  title="About Keith Dyer and LEXGRO"
  description="Meet Keith Dyer, founder of LEXGRO. 12+ years helping law firms grow with fractional CMO services, marketing strategy, and proven results across 200+ firms."
  image="/og/about.png"
>
  <!-- Hero Section -->
  <section class="about-hero">
    <Image
      src={heroBackground}
      alt=""
      class="hero-bg"
      widths={[800, 1200, 1920]}
      sizes="100vw"
      loading="eager"
    />
    <div class="hero-overlay"></div>
    <div class="container hero-container">
      <div class="hero-content">
        <span class="section-label">About LEXGRO</span>
        <h1 class="hero-title">Stop Guessing.<br />Start Leading.</h1>
        <p class="hero-subtitle">
          LEXGRO exists to help law firms build predictable, durable growth. without
          the guesswork, the wasted spend, or the revolving door of agencies that
          don't understand your business.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section">
    <div class="container">
      <div class="mission-layout">
        <div class="mission-content">
          <span class="section-label">Our Mission</span>
          <h2 class="section-title-left">Build Predictable, Durable Growth</h2>
          <p class="mission-text">
            LEXGRO helps law firms build predictable, durable growth by aligning strategy,
            execution, and accountability under one system. Unlike traditional agencies that
            operate at arm's length, we work as an embedded partner.
          </p>
          <p class="mission-text highlight-text">
            When you win, we win. It's that simple.
          </p>
          <div class="vision-block">
            <span class="vision-label">Our Vision</span>
            <p class="vision-text">
              To become the most trusted growth partner in legal marketing. known for
              honest advice, deep expertise, and measurable results.
            </p>
          </div>
          <div class="mission-cta">
            <a href="/contact/" class="btn btn-primary">Start a Conversation</a>
          </div>
        </div>
        <div class="mission-image">
          <Image
            src={aboutEditorial}
            alt="Professional law firm office"
            class="editorial-image"
            width={560}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Keith Bio Section -->
  <section class="bio-section">
    <div class="container">
      <div class="bio-layout">
        <div class="bio-image-wrapper">
          <Image
            src={keithPhoto}
            alt="Keith Dyer - President and Fractional CMO at LEXGRO"
            class="bio-image"
            width={400}
          />
          <div class="bio-image-accent"></div>
        </div>
        <div class="bio-content">
          <span class="section-label">Meet the Founder</span>
          <h2 class="bio-name">Keith Dyer</h2>
          <p class="bio-title">President and Fractional Chief Marketing Officer</p>

          <div class="bio-text">
            <p>
              Keith Dyer is President and Fractional Chief Marketing Officer at LEXGRO,
              the law firm CMO. With battle-tested strategies developed from years of
              hands-on implementation, Keith has helped law firms achieve consistent case
              generation and predictable revenue growth.
            </p>
            <p>
              His approach combines strategic marketing leadership with practical
              implementation. Not just advice, but real execution that delivers measurable results.
            </p>
            <p>
              Keith's expertise spans the full spectrum of law firm marketing: SEO, PPC,
              media buying, intake optimization, and team training. He has personally helped
              scale law firms from $3M to $11M in revenue and coaches attorneys through
              LEXGRO's Certified Law Firm Marketing Professional™ program.
            </p>
          </div>

          <div class="expertise-list">
            <h3 class="expertise-heading">Areas of Expertise</h3>
            <div class="expertise-tags">
              {expertise.map((item) => (
                <span class="expertise-tag">{item}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="values-section">
    <div class="container">
      <div class="values-header">
        <span class="section-label">Our Core Values</span>
        <h2 class="section-title">The Principles That Drive Everything We Do</h2>
        <p class="section-subtitle">
          These aren't just words on a wall. They're how we make decisions, treat clients, and hold ourselves accountable.
        </p>
      </div>

      <div class="values-grid">
        {values.map((value, index) => (
          <div class="value-card">
            <div class={`value-icon value-icon-${(index % 9) + 1}`}>
              {value.icon === 'handshake' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.42 4.58a5.4 5.4 0 0 0-7.65 0l-0.77.78-0.77-0.78a5.4 5.4 0 0 0-7.65 0C1.46 6.7 1.33 10.28 4 13l8 8 8-8c2.67-2.72 2.54-6.3.42-8.42z"></path>
                </svg>
              )}
              {value.icon === 'eye' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              )}
              {value.icon === 'wrench' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                </svg>
              )}
              {value.icon === 'chart' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="20" x2="18" y2="10"></line>
                  <line x1="12" y1="20" x2="12" y2="4"></line>
                  <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
              )}
              {value.icon === 'shield' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              )}
              {value.icon === 'users' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
              {value.icon === 'check-circle' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              )}
              {value.icon === 'message' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
              )}
              {value.icon === 'target' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <circle cx="12" cy="12" r="6"></circle>
                  <circle cx="12" cy="12" r="2"></circle>
                </svg>
              )}
            </div>
            <h3 class="value-title">{value.title}</h3>
            <p class="value-description">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="proof-section">
    <div class="container">
      <div class="proof-content">
        <span class="section-label-dark">Trusted By</span>
        <h2 class="proof-title">Law Firms Across the Country</h2>
        <p class="proof-subtitle">
          From personal injury to estate planning, we've helped firms of all sizes
          achieve predictable growth.
        </p>
        <div class="proof-avatars">
          <Image src={clarkeSpeaks} alt="" width={64} class="proof-avatar" />
          <Image src={matthewAlbrecht} alt="" width={64} class="proof-avatar" />
          <Image src={barrySiegel} alt="" width={64} class="proof-avatar" />
          <span class="proof-avatar proof-avatar-more">+100</span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow?</h2>
        <p class="cta-subtitle">
          Let's talk about how LEXGRO can help your law firm achieve predictable,
          sustainable growth.
        </p>
        <div class="cta-buttons">
          <a href="/contact/" class="btn btn-primary btn-lg">
            Schedule a Strategy Call
          </a>
          <a href="/contact/" class="btn btn-secondary btn-lg">
            Send Us a Message
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .about-hero {
    position: relative;
    padding: 4rem 1.5rem 3rem;
    background: var(--color-bg-dark);
    text-align: center;
    overflow: hidden;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      rgba(1, 25, 7, 0.85) 0%,
      rgba(1, 25, 7, 0.78) 40%,
      rgba(1, 25, 7, 0.68) 100%
    );
  }
  .hero-container {
    position: relative;
    z-index: 2;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: white;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #b0b8b3;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Section Labels */
  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-slate);
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.12), rgba(100, 116, 139, 0.06));
    border: 1px solid rgba(100, 116, 139, 0.15);
    padding: 0.375rem 1rem;
    border-radius: 100px;
    margin-bottom: 0.75rem;
  }

  .about-hero .section-label {
    color: #b0b8b3;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .section-label-dark {
    color: var(--color-mint);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    margin-bottom: 1rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-text-dark);
  }

  .section-title-left {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--color-text-dark);
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #4b5563;
    max-width: 700px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  /* Mission Section */
  .mission-section {
    padding: 6rem 1.5rem;
    background: white;
    position: relative;
  }

  .mission-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(100, 116, 139, 0.2), transparent);
  }

  .mission-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .mission-layout {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .mission-text {
    font-size: 1.0625rem;
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1.25rem;
  }

  .mission-text.highlight-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    font-style: italic;
  }

  .vision-block {
    margin-top: 2rem;
    padding: 1.5rem;
    background: #fafafa;
    border-radius: 12px;
    border-left: 4px solid var(--color-primary);
  }

  .vision-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    display: block;
  }

  .vision-text {
    font-size: 1.0625rem;
    color: var(--color-text-dark);
    line-height: 1.6;
    margin: 0;
    font-weight: 500;
  }

  .mission-cta {
    margin-top: 2rem;
  }

  .editorial-image {
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  /* Stats Section */
  .stats-section {
    padding: 4rem 1.5rem;
    background: var(--color-bg-dark);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: white;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #b0b8b3;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Bio Section */
  .bio-section {
    padding: 6rem 1.5rem;
    background: #fafafa;
    position: relative;
  }

  .bio-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(100, 116, 139, 0.2), transparent);
  }

  .bio-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media (min-width: 900px) {
    .bio-layout {
      grid-template-columns: 380px 1fr;
      gap: 4rem;
    }
  }

  .bio-image-wrapper {
    position: relative;
  }

  .bio-image {
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
  }

  .bio-image-accent {
    position: absolute;
    bottom: -12px;
    left: -12px;
    right: 12px;
    top: 12px;
    background: var(--color-primary);
    border-radius: 20px;
    z-index: -1;
    opacity: 0.15;
  }

  .bio-name {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text-dark);
    margin-bottom: 0.25rem;
  }

  .bio-title {
    font-size: 1.125rem;
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .bio-text p {
    font-size: 1rem;
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .expertise-list {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .expertise-heading {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #4b5563;
    margin-bottom: 1rem;
  }

  .expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .expertise-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 0.8125rem;
    color: var(--color-text-dark);
    font-weight: 500;
  }

  /* Values Section */
  .values-section {
    padding: 6rem 1.5rem;
    background: white;
    text-align: center;
    position: relative;
  }

  .values-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(100, 116, 139, 0.2), transparent);
  }

  .values-header {
    margin-bottom: 3rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.25rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 600px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 900px) {
    .values-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .value-card {
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
    text-align: left;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .value-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .value-icon-1 {
    background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
    color: var(--color-primary);
  }

  .value-icon-2 {
    background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
    color: #1976D2;
  }

  .value-icon-3 {
    background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
    color: var(--color-accent);
  }

  .value-icon-4 {
    background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
    color: var(--color-teal);
  }

  .value-icon-5 {
    background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
    color: var(--color-accent-purple);
  }

  .value-icon-6 {
    background: linear-gradient(135deg, #FCE4EC 0%, #F8BBD9 100%);
    color: #C2185B;
  }

  .value-icon-7 {
    background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
    color: #00838F;
  }

  .value-icon-8 {
    background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
    color: #F57C00;
  }

  .value-icon-9 {
    background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
    color: var(--color-primary);
  }

  .value-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .value-description {
    font-size: 0.9375rem;
    color: #4b5563;
    line-height: 1.6;
  }

  /* Social Proof Section */
  .proof-section {
    padding: 6rem 1.5rem;
    background: var(--color-bg-dark);
    text-align: center;
