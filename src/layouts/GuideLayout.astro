---
/**
 * GuideLayout - Premium Pillar Content Template
 * For comprehensive guides (5000-8000 words)
 * Unique design: chapter-style navigation, reading progress, premium feel
 */
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
  title: string;
  description: string;
  author?: string;
  pubDate?: Date;
  updatedDate?: Date;
  slug?: string;
  wordCount?: number;
}

const {
  title,
  description,
  author = 'Keith Dyer',
  pubDate,
  updatedDate,
  slug = '',
  wordCount = 5000
} = Astro.props;

// Calculate reading time (200 words per minute)
const readingTime = Math.ceil(wordCount / 200);

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Guides', href: '/guide/' },
  { label: title }
];

// Article schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Person",
    "name": author,
    "url": "https://lexgro.com/about/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "LEXGRO",
    "logo": {
      "@type": "ImageObject",
      "url": "https://lexgro.com/logo.png"
    }
  },
  ...(pubDate && { "datePublished": pubDate.toISOString() }),
  ...(updatedDate && { "dateModified": updatedDate.toISOString() }),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://lexgro.com/guide/${slug}/`
  }
};

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={title} description={description} image={`/og/guide/${slug}.png`}>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <!-- Reading Progress -->
  <div class="progress-container">
    <div class="progress-bar" id="progress-bar"></div>
  </div>

  <article class="guide-article">
    <!-- Hero Header -->
    <header class="guide-hero">
      <div class="container">
        <Breadcrumbs items={breadcrumbItems} />

        <div class="hero-content">
          <div class="hero-meta">
            <span class="guide-badge">Complete Guide</span>
            <span class="reading-time">{readingTime} min read</span>
          </div>

          <h1 class="hero-title">{title}</h1>
          <p class="hero-description">{description}</p>

          <div class="author-strip">
            <img
              src="/images/keith-dyer.jpg"
              alt={author}
              class="author-img"
              width="48"
              height="48"
              onerror="this.src='/images/avatar-placeholder.svg'"
            />
            <div class="author-details">
              <a href="/about/" class="author-name">{author}</a>
              <span class="author-title">Fractional CMO for Law Firms</span>
            </div>
            {pubDate && (
              <time datetime={pubDate.toISOString()} class="pub-date">
                Updated {formatDate(pubDate)}
              </time>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Grid -->
    <div class="guide-main">
      <div class="container">
        <div class="guide-grid">
          <!-- Sidebar -->
          <aside class="guide-sidebar">
            <div class="sidebar-inner">
              <!-- Table of Contents -->
              <nav class="toc-card">
                <div class="toc-header">
                  <span class="toc-icon">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="3" y1="6" x2="21" y2="6"></line>
                      <line x1="3" y1="12" x2="15" y2="12"></line>
                      <line x1="3" y1="18" x2="18" y2="18"></line>
                    </svg>
                  </span>
                  <span class="toc-title">In This Guide</span>
                </div>
                <div class="toc-links" id="toc-links">
                  <!-- Populated by JS -->
                </div>
              </nav>

              <!-- Sidebar CTA -->
              <div class="sidebar-cta">
                <div class="cta-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                </div>
                <h4>Need Help Implementing?</h4>
                <p>Get personalized guidance for your firm.</p>
                <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-full">
                  Book a Free Call
                </a>
              </div>
            </div>
          </aside>

          <!-- Article Content -->
          <div class="guide-content">
            <div class="prose" id="guide-content">
              <slot />
            </div>

            <!-- Author Card -->
            <div class="author-card">
              <img
                src="/images/keith-dyer.jpg"
                alt={author}
                class="author-card-img"
                width="80"
                height="80"
                onerror="this.src='/images/avatar-placeholder.svg'"
              />
              <div class="author-card-body">
                <span class="author-card-label">Written by</span>
                <h4 class="author-card-name">{author}</h4>
                <p class="author-card-bio">
                  Keith Dyer is a Fractional CMO helping law firms build predictable, sustainable growth.
                  With 15+ years in legal marketing, he's helped firms across the country transform their client acquisition.
                </p>
                <a href="/about/" class="author-card-link">Learn more about Keith â†’</a>
              </div>
            </div>

            <!-- Share Row -->
            <div class="share-row">
              <span class="share-label">Share this guide:</span>
              <div class="share-buttons">
                <button class="share-btn" data-share="twitter" title="Share on X">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </button>
                <button class="share-btn" data-share="linkedin" title="Share on LinkedIn">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </button>
                <button class="share-btn" data-share="copy" title="Copy link">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <section class="guide-cta">
      <div class="container">
        <div class="cta-inner">
          <h2>Ready to Put This Guide Into Action?</h2>
          <p>Every law firm is different. Let's discuss how to apply these strategies to your specific situation.</p>
          <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-white btn-lg">
            Schedule a Strategy Call
          </a>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  /* Progress Bar */
  .progress-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: rgba(41, 140, 66, 0.1);
    z-index: 1000;
  }

  .progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-teal));
    width: 0%;
    transition: width 0.1s ease;
  }

  /* Hero */
  .guide-hero {
    background: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-dark-alt) 100%);
    padding: 3rem 0 4rem;
  }

  .hero-content {
    max-width: 800px;
  }

