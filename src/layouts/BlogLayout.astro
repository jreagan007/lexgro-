---
/**
 * BlogLayout - Modern Editorial Blog Template
 * Features: Hero image, clean TOC, smart related posts, CRO-focused CTAs
 */
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
  title: string;
  description: string;
  author?: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
  slug?: string;
  category?: string;
  readingTime?: string;
  relatedPosts?: Array<{ title: string; slug: string; category?: string; description?: string }>;
}

const {
  title,
  description,
  author = 'Keith Dyer',
  pubDate,
  updatedDate,
  heroImage,
  tags = [],
  slug = '',
  category = 'Marketing',
  readingTime = '5 min read',
  relatedPosts = []
} = Astro.props;

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog/' },
  { label: title }
];

// Article schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Person",
    "name": author,
    "url": "https://lexgro.com/about/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "LEXGRO",
    "logo": {
      "@type": "ImageObject",
      "url": "https://lexgro.com/logo.png"
    }
  },
  "datePublished": pubDate.toISOString(),
  ...(updatedDate && { "dateModified": updatedDate.toISOString() }),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://lexgro.com/blog/${slug}/`
  }
};

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={title} description={description} image={`/og/blog/${slug}.png`}>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <!-- Reading Progress Bar -->
  <div class="progress-bar" id="progress-bar"></div>

  <article class="blog-article">
    <!-- Header -->
    <header class="blog-header">
      <div class="container">
        <div class="header-inner">
          <Breadcrumbs items={breadcrumbItems} />

          <div class="meta-top">
            <span class="category-pill">{category}</span>
            <span class="reading-time">{readingTime}</span>
          </div>

          <h1 class="article-title">{title}</h1>
          <p class="article-lede">{description}</p>

          <div class="author-row">
            <div class="author-info">
              <img
                src="/images/keith-dyer.jpg"
                alt={author}
                class="author-avatar"
                width="44"
                height="44"
                onerror="this.src='/images/avatar-placeholder.svg'"
              />
              <div class="author-text">
                <a href="/about/" class="author-name">{author}</a>
                <time datetime={pubDate.toISOString()} class="pub-date">
                  {formatDate(pubDate)}
                </time>
              </div>
            </div>

            <!-- Share Buttons -->
            <div class="share-buttons">
              <button class="share-btn" data-share="twitter" title="Share on X">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </button>
              <button class="share-btn" data-share="linkedin" title="Share on LinkedIn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </button>
              <button class="share-btn" data-share="copy" title="Copy link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Image (if exists) -->
    {heroImage && (
      <div class="hero-image">
        <div class="container">
          <img src={heroImage} alt={title} loading="eager" />
        </div>
      </div>
    )}

    <!-- Main Content Area -->
    <div class="content-wrapper">
      <div class="container">
        <div class="content-grid">
          <!-- Article Body -->
          <div class="article-main">
            <div class="article-body prose" id="blog-content">
              <slot />
            </div>

            <!-- Tags -->
            {tags.length > 0 && (
              <div class="tags-row">
                {tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}

            <!-- Author Card -->
            <div class="author-card">
              <img
                src="/images/keith-dyer.jpg"
                alt={author}
                class="author-card-img"
                width="72"
                height="72"
                onerror="this.src='/images/avatar-placeholder.svg'"
              />
              <div class="author-card-content">
                <span class="author-card-label">Written by</span>
                <h4 class="author-card-name">{author}</h4>
                <p class="author-card-bio">
                  Fractional CMO helping law firms build predictable growth through strategic marketing. 15+ years in legal marketing.
                </p>
                <a href="/about/" class="author-card-link">More about Keith</a>
              </div>
            </div>

          </div>

          <!-- Sidebar: TOC + CTA -->
          <aside class="sidebar" id="toc-sidebar">
            <div class="sidebar-inner">
              <!-- TOC -->
              <div class="toc-section">
                <div class="toc-header">
                  <span class="toc-label">Contents</span>
                </div>
                <nav class="toc-nav" id="toc-nav">
                  <!-- Populated by JS - H2s only -->
                </nav>
              </div>

              <!-- Sidebar CTA -->
              <div class="sidebar-cta">
                <h4>Ready to Put This Into Action?</h4>
                <p>Get a personalized marketing roadmap for your firm.</p>
                <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-full">
                  Book a Free Call
                </a>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>

    <!-- Related Posts Section -->
    {relatedPosts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <h2 class="related-heading">Keep Reading</h2>
          <div class="related-grid">
            {relatedPosts.slice(0, 3).map(post => (
              <a href={`/blog/${post.slug}/`} class="related-card">
                <span class="related-card-category">{post.category || 'Blog'}</span>
                <h3 class="related-card-title">{post.title}</h3>
                {post.description && (
                  <p class="related-card-desc">{post.description.slice(0, 100)}...</p>
                )}
                <span class="related-card-link">Read article â†’</span>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Bottom CTA -->
    <section class="bottom-cta">
      <div class="container">
        <div class="bottom-cta-inner">
          <h2>Let's Grow Your Firm</h2>
          <p>Stop guessing. Start growing. Book a free strategy call.</p>
          <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-white btn-lg">
            Schedule a Call
          </a>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  /* Progress Bar */
  .progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-teal));
    width: 0%;
    z-index: 1000;
    transition: width 0.1s ease;
  }

  /* Header */
  .blog-header {
    padding: 2rem 0 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .header-inner {
    max-width: 720px;
  }

  .meta-top {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-pill {
    background: var(--color-primary);
    color: white;
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .reading-time {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .article-title {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    line-height: 1.15;
    font-weight: 800;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .article-lede {
    font-size: 1.125rem;
    line-height: 1.5;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .author-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-text {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text-dark);
    text-decoration: none;
    font-size: 0.9375rem;
  }

  .author-name:hover {
    color: var(--color-primary);
  }

  .pub-date {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  /* Share Buttons */
  .share-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .share-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    background: white;
    color: var(--color-text-muted);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .share-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background: var(--color-bg-light);
  }

  .share-btn.copied {
    border-color: var(--color-primary);
    background: var(--color-primary);
    color: white;
  }

  /* Hero Image */
  .hero-image {
    padding: 2rem 0;
    background: var(--color-bg-light);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
    max-height: 500px;
  }

  /* Content Wrapper */
  .content-wrapper {
    padding: 3rem 0;
  }

  /* Content Grid - Main + Sidebar */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr 240px;
      gap: 4rem;
    }
  }

  .article-main {
    max-width: 720px;
  }

  /* Sidebar */
  .sidebar {
    display: none;
  }

  @media (min-width: 1024px) {
    .sidebar {
      display: block;
    }

    .sidebar-inner {
      position: sticky;
      top: 100px;
    }
  }

  /* TOC Section */
  .toc-section {
    margin-bottom: 2rem;
  }

  .toc-header {
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 0.75rem;
  }

  .toc-label {
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .toc-nav {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .toc-nav :global(a) {
    display: block;
    padding: 0.375rem 0;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    text-decoration: none;
    line-height: 1.4;
    border-left: 2px solid transparent;
    padding-left: 0.75rem;
    transition: all 0.15s ease;
  }

  .toc-nav :global(a:hover) {
    color: var(--color-primary);
  }

  .toc-nav :global(a.active) {
    color: var(--color-primary);
    border-left-color: var(--color-primary);
    font-weight: 500;
  }

  /* Sidebar CTA */
  .sidebar-cta {
    background: var(--color-bg-light);
    border-radius: 12px;
    padding: 1.25rem;
  }

  .sidebar-cta h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .sidebar-cta p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
  }

  /* Article Body */
  .article-body {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-text);
  }

  .article-body :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-dark);
    scroll-margin-top: 100px;
  }

  .article-body :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-dark);
  }

  .article-body :global(p) {
    margin-bottom: 1.25rem;
  }

  .article-body :global(ul), .article-body :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-body :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-body :global(blockquote) {
    border-left: 3px solid var(--color-primary);
    padding-left: 1.25rem;
    margin: 2rem 0;
    font-size: 1.125rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .article-body :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .article-body :global(a:hover) {
    color: var(--color-primary-dark);
  }

  /* Tags */
  .tags-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .tag {
    background: var(--color-bg-light);
    color: var(--color-text-muted);
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
  }

  /* Author Card */
  .author-card {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    margin-top: 2.5rem;
  }

  @media (max-width: 500px) {
    .author-card {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
  }

  .author-card-img {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .author-card-content {
    flex: 1;
  }

  .author-card-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .author-card-name {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0.25rem 0 0.5rem;
    color: var(--color-text-dark);
  }

  .author-card-bio {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  .author-card-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
  }

  .author-card-link:hover {
    text-decoration: underline;
  }

  /* Related Section */
  .related-section {
    padding: 4rem 0;
    background: var(--color-bg-light);
  }

  .related-heading {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 900px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid var(--color-border);
  }

  .related-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .related-card-category {
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    display: block;
  }

  .related-card-title {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-text-dark);
    line-height: 1.35;
    margin-bottom: 0.5rem;
  }

  .related-card-desc {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .related-card-link {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  /* Bottom CTA */
  .bottom-cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-teal) 100%);
    padding: 4rem 0;
  }

  .bottom-cta-inner {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .bottom-cta h2 {
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: white;
    margin-bottom: 0.75rem;
    font-weight: 700;
  }

  .bottom-cta p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
  }

  .btn-white {
    background: white;
    color: var(--color-primary);
    border: none;
  }

  .btn-white:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-header {
      padding: 1.5rem 0 1rem;
    }

    .content-wrapper {
      padding: 2rem 0;
    }

    .article-body :global(h2) {
      font-size: 1.375rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Generate TOC - H2s only for cleaner navigation
    const tocNav = document.getElementById('toc-nav');
    const content = document.getElementById('blog-content');
    const headings = content?.querySelectorAll('h2');

    if (tocNav && headings && headings.length > 0) {
      headings.forEach((heading, index) => {
        if (!heading.id) {
          heading.id = heading.textContent
            ?.toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/(^-|-$)/g, '') || `section-${index}`;
        }

        const link = document.createElement('a');
        link.href = `#${heading.id}`;
        link.textContent = heading.textContent;
        tocNav.appendChild(link);
      });

      // Active section tracking
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          const id = entry.target.getAttribute('id');
          const tocLink = tocNav.querySelector(`a[href="#${id}"]`);

          if (entry.isIntersecting) {
            tocNav.querySelectorAll('a').forEach(a => a.classList.remove('active'));
            tocLink?.classList.add('active');
          }
        });
      }, { rootMargin: '-100px 0px -70% 0px', threshold: 0 });

      headings.forEach(heading => observer.observe(heading));
    }

    // Reading progress bar
    const progressBar = document.getElementById('progress-bar');
    const article = document.querySelector('.blog-article');

    if (progressBar && article) {
      window.addEventListener('scroll', () => {
        const articleTop = article.offsetTop;
        const articleHeight = article.offsetHeight;
        const windowHeight = window.innerHeight;
        const scrollY = window.scrollY;

        const progress = Math.min(
          Math.max((scrollY - articleTop + windowHeight * 0.3) / (articleHeight - windowHeight * 0.5), 0),
          1
        );

        progressBar.style.width = `${progress * 100}%`;
      });
    }

    // Share buttons
    const shareButtons = document.querySelectorAll('.share-btn');
    const pageUrl = encodeURIComponent(window.location.href);
    const pageTitle = encodeURIComponent(document.title);

    shareButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const type = btn.getAttribute('data-share');

        if (type === 'twitter') {
          window.open(`https://twitter.com/intent/tweet?url=${pageUrl}&text=${pageTitle}`, '_blank', 'width=550,height=420');
        } else if (type === 'linkedin') {
          window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${pageUrl}`, '_blank', 'width=550,height=420');
        } else if (type === 'copy') {
          navigator.clipboard.writeText(window.location.href).then(() => {
            btn.classList.add('copied');
            setTimeout(() => btn.classList.remove('copied'), 2000);
          });
        }
      });
    });
  });
</script>
