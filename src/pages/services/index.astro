---
/**
 * Services Index Page
 *
 * Overview of all LEXGRO services with CTAs to detailed pages.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Images
import keithPhoto from '../../assets/images/sections/keith-cmo-photo.png';

const services = [
  {
    title: 'Fractional CMO Services',
    description: 'Get senior marketing leadership without the full-time cost. We become your strategic partner, aligning our success with yours.',
    features: [
      'Strategic marketing leadership',
      'Monthly strategy sessions',
      'Team training and development',
      'Vendor management',
      'Performance tracking and reporting',
    ],
    href: '/services/fractional-cmo/',
    color: 'green',
    popular: true,
  },
  {
    title: 'Evergreen Marketing Training',
    description: 'Access our comprehensive training library for your marketing team. Learn proven strategies at your own pace.',
    features: [
      '9 learning modules',
      '25+ tools and exercises',
      'Practice area specific content',
      'Referral program kit',
      'Facebook advertising training',
    ],
    href: '/services/',
    color: 'blue',
  },
  {
    title: 'CMO Coaching and Consulting',
    description: 'Live training sessions and Q&A with Keith Dyer. Get personalized guidance for your specific challenges.',
    features: [
      'Monthly live coaching calls',
      'Practice area focus groups',
      'Private community access',
      'Direct access to Keith',
      '6-month structured program',
    ],
    href: '/services/',
    color: 'purple',
  },
  {
    title: 'Strategic Marketing Implementor',
    description: 'We place a trained SMI directly in your firm to execute marketing strategies under CMO guidance.',
    features: [
      'Fully trained marketing specialist',
      'Managed by your firm and our CMO',
      'Hands-on implementation',
      'smooth integration',
      'Scalable support',
    ],
    href: '/services/',
    color: 'orange',
  },
];

const practiceAreas = [
  'Personal Injury',
  'Family Law',
  'Immigration',
  'Estate Planning',
  'Bankruptcy',
  'Criminal Defense',
  'Workers\' Compensation',
  'Mass Tort',
];
---

<BaseLayout
  title="Law Firm Marketing Services"
  description="LEXGRO offers fractional CMO services, marketing training, and vetted vendor management for law firms. Get predictable growth without the guesswork."
  image="/og/services.png"
>
  <!-- Hero Section -->
  <section class="services-hero">
    <div class="container">
      <div class="hero-layout">
        <div class="hero-content">
          <span class="section-label">Our Services</span>
          <h1 class="hero-title">Marketing Solutions Built for Law Firms</h1>
          <p class="hero-subtitle">
            From strategic leadership to hands-on implementation, we have the right
            solution for every stage of your firm's growth.
          </p>
          <div class="hero-cta">
            <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
              Schedule a Strategy Call
            </a>
          </div>
        </div>
        <div class="hero-graphic">
          <div class="keith-container">
            <Image
              src={keithPhoto}
              alt="Keith Dyer - Law Firm CMO"
              width={400}
              class="keith-image"
            />
            <div class="keith-badge">
              <span class="badge-title">Your Fractional CMO</span>
              <span class="badge-name">Keith Dyer</span>
              <span class="badge-exp">15+ Years Experience</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section">
    <div class="container">
      <div class="services-grid">
        {services.map((service) => (
          <div class={`service-card service-card-${service.color}`}>
            {service.popular && <span class="popular-badge">Most Popular</span>}
            <h2 class="service-title">{service.title}</h2>
            <p class="service-description">{service.description}</p>
            <ul class="service-features">
              {service.features.map((feature) => (
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <a href={service.href} class="btn btn-secondary service-cta">
              Learn More â†’
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Practice Areas Section -->
  <section class="practice-areas-section">
    <div class="container">
      <div class="practice-content">
        <span class="section-label-dark">Specialized Expertise</span>
        <h2 class="practice-title">Marketing That Understands Your Practice</h2>
        <p class="practice-subtitle">
          We specialize in marketing for specific practice areas, ensuring strategies
          that resonate with your ideal clients.
        </p>
        <div class="practice-tags">
          {practiceAreas.map((area) => (
            <span class="practice-tag">{area}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="process-section">
    <div class="container">
      <div class="process-header">
        <span class="section-label">How It Works</span>
        <h2 class="section-title">Your Path to Predictable Growth</h2>
      </div>

      <div class="process-steps">
        <div class="process-step">
          <div class="step-number">1</div>
          <h3 class="step-title">Discovery Call</h3>
          <p class="step-description">
            We learn about your firm, goals, and challenges to determine the best path forward.
          </p>
        </div>
        <div class="process-step">
          <div class="step-number">2</div>
          <h3 class="step-title">Strategy Development</h3>
          <p class="step-description">
            We create a customized marketing strategy aligned with your practice area and market.
          </p>
        </div>
        <div class="process-step">
          <div class="step-number">3</div>
          <h3 class="step-title">Implementation</h3>
          <p class="step-description">
            Our team helps you execute, whether through training, coaching, or direct support.
          </p>
        </div>
        <div class="process-step">
          <div class="step-number">4</div>
          <h3 class="step-title">Growth and Optimization</h3>
          <p class="step-description">
            We continuously refine your approach based on data and results to maximize ROI.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Not Sure Which Service Is Right?</h2>
        <p class="cta-subtitle">
          Let's talk. We'll help you find the perfect fit for your firm's needs and goals.
        </p>
        <div class="cta-buttons">
          <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
            Schedule a Free Consultation
          </a>
          <a href="/contact/" class="btn btn-secondary btn-lg">
            Send Us a Message
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .services-hero {
    padding: 5rem 0;
    background: linear-gradient(180deg, var(--color-bg-light) 0 percent, white 100 percent);
  }

  .hero-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .hero-layout {
      grid-template-columns: 1fr 1fr;
    }
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .section-label-dark {
    color: var(--color-mint);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .keith-container {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .keith-image {
    border-radius: 20px;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.15));
  }

  .keith-badge {
    position: absolute;
    bottom: -20px;
    left: 50 percent;
    transform: translateX(-50 percent);
    background: white;
    padding: 1rem 1.5rem;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    text-align: center;
    min-width: 200px;
  }

  .badge-title {
    display: block;
    font-size: 0.75rem;
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .badge-name {
    display: block;
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.25rem;
  }

  .badge-exp {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  /* Services Grid */
  .services-section {
    padding: 5rem 0;
    background: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .service-card {
    background: white;
    padding: 2.5rem;
    border-radius: 24px;
    border: 1px solid var(--color-border);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .service-card-green {
    border-top: 4px solid var(--color-primary);
  }

  .service-card-blue {
    border-top: 4px solid var(--color-accent-blue);
  }

  .service-card-purple {
    border-top: 4px solid var(--color-accent-purple);
  }

  .service-card-orange {
    border-top: 4px solid var(--color-accent);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    right: 24px;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.75rem;
  }

  .service-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: var(--color-text-dark);
  }

  .service-features svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .service-cta {
    width: 100 percent;
    justify-content: center;
  }

  /* Practice Areas Section */
  .practice-areas-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
    text-align: center;
  }

  .practice-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .practice-subtitle {
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .practice-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .practice-tag {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 1.25rem;
    border-radius: 100px;
    font-size: 0.9375rem;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Process Section */
  .process-section {
    padding: 5rem 0;
    background: white;
  }

  .process-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    color: var(--color-text-dark);
  }

  .process-steps {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .process-steps {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }
  }

  .process-step {
    text-align: center;
  }

  .step-number {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--color-primary) 0 percent, var(--color-teal) 100 percent);
    color: white;
    font-size: 1.5rem;
    font-weight: 800;
    border-radius: 50 percent;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .step-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-primary) 0 percent, var(--color-teal) 100 percent);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  @media (min-width: 500px) {
    .cta-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .cta-section .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn-primary:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  .cta-section .btn-secondary {
    border-color: white;
    color: white;
  }

  .cta-section .btn-secondary:hover {
    background: white;
    color: var(--color-primary);
  }
</style>
