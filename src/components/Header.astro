---
/**
 * Header Component (Astro)
 * Clean, accessible navigation with enhanced dropdown.
 * Inspired by AEE Law and MesoWatch patterns.
 */
import { Image } from 'astro:assets';
import logoWordmark from '../assets/images/logos/lexgro-wordmark.png';

interface DropdownItem {
  label: string;
  href: string;
  description?: string;
  count?: string;
}

interface NavLink {
  label: string;
  href?: string;
  dropdown?: DropdownItem[];
}

const navLinks: NavLink[] = [
  { label: 'Home', href: '/' },
  { label: 'How We Work', href: '/how-we-work/' },
  { label: 'LEXXLY', href: '/lexxly/' },
  { label: 'Results', href: '/results/' },
  {
    label: 'Resources',
    dropdown: [
      { label: 'Guides', href: '/guide/', description: 'In-depth marketing playbooks', count: '7' },
      { label: 'Blog', href: '/blog/', description: 'Insights and strategies', count: '31' },
      { label: 'Podcast', href: '/podcast/', description: 'Law Firm Growth Podcast', count: '30' },
      { label: 'Tips from Keith', href: '/tips-from-keith/', description: 'Quick video tips', count: '12' },
    ]
  },
  { label: 'About', href: '/about/' },
];

const currentPath = Astro.url.pathname;

function isActive(link: NavLink): boolean {
  if (link.href) {
    return currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href));
  }
  if (link.dropdown) {
    return link.dropdown.some(item => currentPath.startsWith(item.href));
  }
  return false;
}
---

<header class="header">
  <nav class="nav container" aria-label="Main navigation">
    <a href="/" class="logo" aria-label="LEXGRO Home">
      <Image src={logoWordmark} alt="LEXGRO" height={40} />
    </a>

    <button
      class="mobile-menu-btn"
      aria-expanded="false"
      aria-controls="nav-menu"
      aria-label="Toggle navigation menu"
    >
      <svg class="icon-menu" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
      <svg class="icon-close" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div id="nav-menu" class="nav-menu">
      <ul class="nav-links" role="list">
        {navLinks.map((link) => (
          <li class={link.dropdown ? 'has-dropdown' : ''}>
            {link.href ? (
              <a
                href={link.href}
                class:list={['nav-link', { active: isActive(link) }]}
                aria-current={currentPath === link.href ? 'page' : undefined}
              >
                {link.label}
              </a>
            ) : (
              <div class="dropdown-container">
                <button
                  class:list={['nav-link', 'dropdown-trigger', { active: isActive(link) }]}
                  aria-expanded="false"
                  aria-haspopup="true"
                >
                  {link.label}
                  <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 4.5 6 7.5 9 4.5"></polyline>
                  </svg>
                </button>
                <ul class="dropdown-menu" role="menu">
                  {link.dropdown?.map((item) => (
                    <li role="none">
                      <a
                        href={item.href}
                        class:list={['dropdown-link', { active: currentPath.startsWith(item.href) }]}
                        role="menuitem"
                      >
                        <span class="dropdown-link-main">
                          <span class="dropdown-link-label">{item.label}</span>
                          {item.count && <span class="dropdown-link-count">{item.count}</span>}
                        </span>
                        {item.description && <span class="dropdown-link-desc">{item.description}</span>}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </li>
        ))}
      </ul>
      <a href="/contact/" class="btn btn-primary nav-cta">
        Get Your Growth Audit
      </a>
    </div>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.97);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(41, 140, 66, 0.1);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo img {
    height: 40px;
    width: auto;
  }

  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-primary);
    border-radius: 8px;
    transition: background 0.2s ease;
  }

  .mobile-menu-btn:hover {
    background: #fafafa;
  }

  @media (min-width: 900px) {
    .mobile-menu-btn {
      display: none;
    }
  }

  .nav-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(41, 140, 66, 0.1);
    box-shadow: var(--shadow-soft);
  }

  .nav-menu.open {
    display: block;
  }

  @media (min-width: 900px) {
    .nav-menu {
      display: flex;
      position: static;
      background: none;
      padding: 0;
      border: none;
      box-shadow: none;
      align-items: center;
      gap: 2rem;
    }
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 900px) {
    .nav-links {
      flex-direction: row;
      gap: 0.25rem;
    }
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.75rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: 8px;
    transition: color 0.2s ease, background 0.2s ease;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
  }

  .nav-link:hover {
    color: var(--color-primary);
    background: #fafafa;
    text-decoration: none;
  }

  .nav-link.active {
    color: var(--color-primary);
    background: rgba(41, 140, 66, 0.08);
  }

  /* Dropdown */
  .has-dropdown {
    position: relative;
  }

  .dropdown-container {
    position: relative;
  }

  .dropdown-trigger {
    width: 100%;
    justify-content: space-between;
  }

  @media (min-width: 900px) {
    .dropdown-trigger {
      width: auto;
    }
  }

  .dropdown-icon {
    transition: transform 0.2s ease;
  }

  .dropdown-trigger[aria-expanded="true"] .dropdown-icon {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    display: none;
    list-style: none;
    margin: 0;
    padding: 0.5rem 0 0 1rem;
  }

  .dropdown-menu.open {
    display: block;
  }

  @media (min-width: 900px) {
    .dropdown-menu {
      position: absolute;
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      min-width: 260px;
      padding: 0.5rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
      border: 1px solid rgba(41, 140, 66, 0.08);
    }

    .has-dropdown:hover .dropdown-menu,
    .dropdown-trigger:focus + .dropdown-menu,
    .dropdown-menu:hover {
      display: block;
    }
  }

  .dropdown-link {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .dropdown-link:hover {
    background: #fafafa;
    text-decoration: none;
  }

  .dropdown-link.active {
    background: rgba(41, 140, 66, 0.06);
  }

  .dropdown-link-main {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .dropdown-link-label {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .dropdown-link:hover .dropdown-link-label {
    color: var(--color-primary);
  }

  .dropdown-link.active .dropdown-link-label {
    color: var(--color-primary);
  }

  .dropdown-link-count {
    font-size: 0.75rem;
    font-weight: 500;
    color: #4b5563;
    background: #fafafa;
    padding: 0.125rem 0.5rem;
    border-radius: 100px;
  }

  .dropdown-link-desc {
    font-size: 0.8125rem;
    color: #4b5563;
    line-height: 1.3;
  }

  @media (min-width: 900px) {
    .dropdown-link {
      border-radius: 6px;
      margin: 0.25rem;
    }
  }

  .nav-cta {
    margin-top: 1rem;
    width: 100%;
    text-align: center;
  }

  @media (min-width: 900px) {
    .nav-cta {
      margin-top: 0;
      width: auto;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const navMenu = document.getElementById('nav-menu');
  const iconMenu = document.querySelector('.icon-menu');
  const iconClose = document.querySelector('.icon-close');

  if (menuBtn && navMenu && iconMenu && iconClose) {
    menuBtn.addEventListener('click', () => {
      const isOpen = navMenu.classList.toggle('open');
      menuBtn.setAttribute('aria-expanded', String(isOpen));
      (iconMenu as HTMLElement).style.display = isOpen ? 'none' : 'block';
      (iconClose as HTMLElement).style.display = isOpen ? 'block' : 'none';
    });
  }

  // Mobile dropdown toggle
  const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');
  dropdownTriggers.forEach((trigger) => {
    trigger.addEventListener('click', (e) => {
      // Only handle click on mobile
      if (window.innerWidth < 900) {
        e.preventDefault();
        const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
        trigger.setAttribute('aria-expanded', String(!isExpanded));
        const menu = trigger.nextElementSibling;
        if (menu) {
          menu.classList.toggle('open');
        }
      }
    });
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('.has-dropdown')) {
      dropdownTriggers.forEach((trigger) => {
        trigger.setAttribute('aria-expanded', 'false');
        const menu = trigger.nextElementSibling;
        if (menu) {
          menu.classList.remove('open');
        }
      });
    }
  });
</script>
