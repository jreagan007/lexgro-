---
/**
 * SOPs and Tools Page
 *
 * Standard Operating Procedures and marketing tools for law firms
 */
import BaseLayout from '../layouts/BaseLayout.astro';

interface Resource {
  title: string;
  description: string;
  type: 'pdf' | 'video' | 'template';
  category: string;
}

const resources: Resource[] = [
  {
    title: 'Building A Facebook Audience for Podcast',
    description: 'Step-by-step guide to growing your podcast audience using Facebook marketing strategies.',
    type: 'pdf',
    category: 'Social Media',
  },
  {
    title: 'Buying Radio',
    description: 'Complete guide to purchasing radio advertising for your law firm.',
    type: 'pdf',
    category: 'Traditional Media',
  },
  {
    title: 'Cold Email Marketing',
    description: 'Best practices for cold email outreach that converts without being spammy.',
    type: 'pdf',
    category: 'Email Marketing',
  },
  {
    title: 'Job Description for Marketing Coordinator',
    description: 'Ready-to-use job description template for hiring a marketing coordinator.',
    type: 'pdf',
    category: 'Hiring',
  },
  {
    title: 'Job Description for PR Manager',
    description: 'Professional job description template for your PR manager position.',
    type: 'pdf',
    category: 'Hiring',
  },
  {
    title: 'LinkedIn Advertising',
    description: 'Complete guide to running effective LinkedIn ad campaigns for legal services.',
    type: 'pdf',
    category: 'Social Media',
  },
  {
    title: 'Marketing Newsletter for Law Firms',
    description: 'Templates and strategies for creating engaging client newsletters.',
    type: 'pdf',
    category: 'Email Marketing',
  },
  {
    title: 'SEO Content Writing with Google and ChatGPT',
    description: 'Modern approach to creating SEO-optimized content using AI tools.',
    type: 'pdf',
    category: 'SEO',
  },
  {
    title: 'Ultimate Law Firm Facebook Ad Training',
    description: 'Comprehensive training on Facebook advertising for law firm client acquisition.',
    type: 'pdf',
    category: 'Social Media',
  },
];

const categories = [...new Set(resources.map(r => r.category))];
---

<BaseLayout
  title="SOPs and Tools - simplifies Your Law Firm Marketing"
  description="Discover clear, step-by-step Standard Operating Procedures and powerful marketing tools designed to simplify your workflows and deliver measurable results."
  image="/og/sops-tools.png"
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <span class="section-label">Resources</span>
        <h1 class="hero-title">SOPs and Tools</h1>
        <p class="hero-subtitle">
          Discover clear, step-by-step Standard Operating Procedures (SOPs) and powerful marketing tools
          designed to simplify your workflows, boost productivity, and deliver measurable results for your law firm.
        </p>
        <p class="hero-highlight">
          helps your team with an extensive 9-module program crafted to ensure consistent growth,
          reduced costs, and measurable success for your law firm!
        </p>
      </div>
    </div>
  </section>

  <!-- Resources Grid -->
  <section class="resources-section">
    <div class="container">
      <div class="resources-grid">
        {resources.map((resource) => (
          <div class="resource-card">
            <div class="resource-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              <span class="resource-type">PDF</span>
            </div>
            <div class="resource-content">
              <span class="resource-category">{resource.category}</span>
              <h3 class="resource-title">{resource.title}</h3>
              <p class="resource-description">{resource.description}</p>
            </div>
            <a href="/contact/" class="resource-link">
              Request Access
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Access Expert Marketing Support Today!</h2>
        <p class="cta-subtitle">
          Get your FREE Marketing Intake Audit from LEXGRO! Discover tailored strategies to boost
          client acquisition, drive predictable growth, and set your law firm up for lasting success.
        </p>
        <a href="/contact/" class="btn btn-primary btn-lg">
          Get a FREE Marketing and Intake Audit
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    padding: 5rem 0 4rem;
    background: linear-gradient(180deg, #fafafa 0%, white 100%);
  }

  .hero-content {
    max-width: 700px;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .hero-highlight {
    font-size: 1rem;
    color: var(--color-primary);
    font-weight: 500;
    padding: 1rem 1.5rem;
    background: rgba(41, 140, 66, 0.1);
    border-radius: 12px;
    border-left: 4px solid var(--color-primary);
  }

  /* Resources Section */
  .resources-section {
    padding: 4rem 0 5rem;
    background: white;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .resource-card {
    background: #fafafa;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .resource-icon {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .resource-icon svg {
    width: 40px;
    height: 40px;
    color: var(--color-primary);
    background: white;
    padding: 8px;
    border-radius: 10px;
  }

  .resource-type {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.75rem;
    background: rgba(41, 140, 66, 0.1);
    border-radius: 100px;
  }

  .resource-content {
    flex: 1;
  }

  .resource-category {
    font-size: 0.75rem;
    font-weight: 500;
    color: #4b5563;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    display: block;
  }

  .resource-title {
    font-size: 1.0625rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .resource-description {
    font-size: 0.875rem;
    color: #4b5563;
    line-height: 1.5;
  }

  .resource-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
    transition: gap 0.2s ease;
  }

  .resource-link:hover {
    gap: 0.75rem;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #0d3d1a 0%, #1a5c2e 100%);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    color: #b0b8b3;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-section .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn-primary:hover {
    background: #fafafa;
  }
</style>
