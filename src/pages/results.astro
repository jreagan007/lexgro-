---
/**
 * Results / Case Studies Page
 *
 * Client success stories, awards, case studies, and testimonials
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { testimonials } from '../data/testimonials';
import heroBackground from '../assets/images/heroes/results-hero.jpg';

const metrics = [
  { value: '47', label: 'Law Firm Partners' },
  { value: '12+', label: 'Years in Legal' },
  { value: '$47M+', label: 'Revenue Generated' },
  { value: '94%', label: 'Client Retention' },
];

const awards = [
  {
    firm: 'Speaks Law Firm',
    award: '8FF Revenue Rockstar Award',
    year: '2023',
    person: 'Clarke Speaks',
    role: 'Founder',
    location: 'Wilmington, NC',
  },
  {
    firm: 'Albrecht Law',
    award: '8FF Speed of Growth Award',
    year: '2024',
    person: 'Matthew Albrecht',
    role: 'Founder',
    location: 'Spokane, WA',
  },
];

const caseStudies = [
  {
    title: 'Personal Injury Firm',
    subtitle: 'SEO and PPC Campaign',
    metric: '45%',
    metricLabel: 'Increase in qualified leads',
    detail: '30 new cases generated in six months from a combined SEO and paid search campaign built on data-driven keyword targeting.',
    iconType: 'search',
  },
  {
    title: 'Real Estate Law Firm',
    subtitle: 'Reputation Management',
    metric: '3.8 â†’ 4.7',
    metricLabel: 'Google review improvement',
    detail: 'Proactive reputation plan improved average Google rating and drove a significant increase in referral traffic within one quarter.',
    iconType: 'star',
  },
  {
    title: 'Multi-Practice Firm',
    subtitle: 'Data-Driven Transition',
    metric: '30%',
    metricLabel: 'Lower cost per lead',
    detail: 'Firm transitioned from traditional ads to a data-driven approach, reducing cost per lead by 30% in nine months while increasing case volume.',
    iconType: 'chart',
  },
];

const approaches = [
  {
    title: 'Deep Legal Industry Focus',
    desc: 'We only work with law firms. Every strategy is built on what actually works in legal marketing, not generic advice.',
    iconType: 'eye',
  },
  {
    title: 'Data-Driven Decisions',
    desc: 'We track everything. Data backs every decision, and results hold every dollar accountable.',
    iconType: 'pulse',
  },
  {
    title: 'Long-Term Partnership',
    desc: 'We are not here for quick wins. Our average client relationship spans years, not months.',
    iconType: 'users',
  },
  {
    title: 'Honest Communication',
    desc: 'We tell you what is working, what is not, and what to do about it. No sugarcoating, no vanity metrics.',
    iconType: 'chat',
  },
];

// Practice area groupings for testimonial section
const practiceAreas = [...new Set(testimonials.map(t => {
  if (t.practiceArea.includes('Personal Injury')) return 'Personal Injury';
  if (t.practiceArea.includes('Estate Planning') || t.practiceArea.includes('Elder Law')) return 'Estate and Elder Law';
  if (t.practiceArea.includes('Immigration')) return 'Immigration';
  if (t.practiceArea.includes('Family Law') || t.practiceArea.includes('Criminal')) return 'Family and Criminal Law';
  return t.practiceArea;
}))];

// Organization Schema with testimonials
const resultsSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Client Results and Case Studies',
  description: 'Real results from LEXGRO clients. See case studies, ROI metrics, and testimonials from personal injury, family law, and immigration firms.',
  url: 'https://lexgro.com/results/',
  mainEntity: {
    '@type': 'Organization',
    name: 'LEXGRO',
    url: 'https://lexgro.com',
    description: 'Legal marketing agency helping law firms grow with data-driven strategies.',
    review: testimonials.map((t) => ({
      '@type': 'Review',
      author: {
        '@type': 'Person',
        name: t.name,
        jobTitle: t.title,
        worksFor: {
          '@type': 'LegalService',
          name: t.firm,
          areaServed: t.practiceArea,
        },
      },
    })),
  },
};
---

<BaseLayout
  title="Client Results and Case Studies"
  description="Real results from LEXGRO clients. See case studies, ROI metrics, and testimonials from personal injury, family law, and immigration firms."
  image="/og/results.png"
>
  <script type="application/ld+json" set:html={JSON.stringify(resultsSchema)} />

  <!-- ========== HERO ========== -->
  <section class="results-hero">
    <Image
      src={heroBackground}
      alt=""
      class="hero-bg"
      widths={[800, 1200, 1920]}
      sizes="100vw"
      loading="eager"
    />
    <div class="hero-overlay"></div>
    <div class="container hero-container">
      <div class="hero-grid">
        <div class="hero-content">
          <span class="hero-label">Results</span>
          <h1>Real Results for<br/>Real Law Firms</h1>
          <p class="hero-text">
            We measure success by one thing: your growth. Not impressions, not clicks. Signed cases and revenue.
          </p>
          <div class="hero-actions">
            <a href="/contact/" class="btn btn-primary btn-lg">Get Your Growth Audit</a>
            <a href="#case-studies" class="btn btn-ghost btn-lg">See Case Studies</a>
          </div>
        </div>
        <div class="hero-visual">
          <div class="hero-stats">
            {metrics.map((metric) => (
              <div class="stat-item">
                <span class="stat-value">{metric.value}</span>
                <span class="stat-text">{metric.label}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== AWARDS ========== -->
  <section class="section-awards">
    <div class="container">
      <div class="awards-header">
        <span class="section-badge">Recognition</span>
        <h2>Award-Winning Law Firm Growth</h2>
        <p class="lead">Real results. Real recognition. Our clients earn top industry awards because the system works.</p>
      </div>
      <div class="awards-grid">
        {awards.map((award) => (
          <div class="award-card">
            <div class="award-trophy">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
                <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
                <path d="M4 22h16"/>
                <path d="M10 14.66V17c0 0.55-0.47.98-0.97 1.21C7.85 18.75 7 20.24 7 22"/>
                <path d="M14 14.66V17c0 0.55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
                <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
              </svg>
            </div>
            <div class="award-info">
              <span class="award-year">{award.year}</span>
              <h3 class="award-name">{award.award}</h3>
              <p class="award-firm">{award.firm}</p>
              <p class="award-person">{award.person}, {award.role} &middot; {award.location}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ========== CASE STUDIES ========== -->
  <section class="section-case-studies" id="case-studies">
    <div class="container">
      <div class="cs-header">
        <span class="cs-badge">Case Studies</span>
        <h2>The Numbers Speak</h2>
        <p class="lead-dark">We measure every engagement. We hold every dollar accountable. Here is what the data shows.</p>
      </div>
      <div class="cs-grid">
        {caseStudies.map((cs) => (
          <div class="cs-card">
            <div class="cs-card-top">
              <div class="cs-icon">
                {cs.iconType === 'search' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="M21 21l-4.35-4.35"/>
                    <path d="M11 8v6M8 11h6"/>
                  </svg>
                )}
                {cs.iconType === 'star' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                )}
                {cs.iconType === 'chart' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                  </svg>
                )}
              </div>
              <div class="cs-metric-block">
                <span class="cs-metric">{cs.metric}</span>
                <span class="cs-metric-label">{cs.metricLabel}</span>
              </div>
            </div>
            <div class="cs-card-bottom">
              <h3>{cs.title}</h3>
              <span class="cs-subtitle">{cs.subtitle}</span>
              <p>{cs.detail}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ========== TESTIMONIALS ========== -->
  <section class="section-testimonials">
    <div class="container">
      <div class="testimonials-header">
        <span class="section-badge">Testimonials</span>
        <h2>See What Our Clients Have Achieved</h2>
        <p class="lead">Predictable revenue, consistent case generation, and lower cost per acquisition. All while keeping marketing costs in check.</p>
      </div>

      <div class="practice-chips">
        {practiceAreas.map((area) => (
          <span class="practice-chip">{area}</span>
        ))}
      </div>

      <div class="testimonials-grid">
        {testimonials.map((t) => (
          <div class="testimonial-card">
            <div class="testimonial-top">
              <div class="testimonial-avatar">
                <img src={t.photo} alt={t.name} class="testimonial-photo" loading="lazy" />
              </div>
              <div class="testimonial-meta">
                <h3 class="testimonial-name">{t.name}</h3>
                <p class="testimonial-role">{t.title}, {t.firm}</p>
              </div>
            </div>
            <div class="testimonial-bottom">
              <p class="testimonial-practice">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="testimonial-icon">
                  <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
                  <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
                </svg>
                {t.practiceArea}
              </p>
              <p class="testimonial-location">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="testimonial-icon">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                {t.location}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ========== WHY WE GET RESULTS ========== -->
  <section class="section-approach">
    <div class="container">
      <div class="approach-header">
        <span class="section-label">The Framework</span>
        <h2>Why We Get Results</h2>
        <p class="lead-dark">No shortcuts. No vanity metrics. A system built for compounding growth.</p>
      </div>
      <div class="approach-grid">
        {approaches.map((item) => (
          <div class="approach-card">
            <div class="approach-icon">
              {item.iconType === 'eye' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              )}
              {item.iconType === 'pulse' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
              )}
              {item.iconType === 'users' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              )}
              {item.iconType === 'chat' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
              )}
            </div>
            <div class="approach-text">
              <strong>{item.title}</strong>
              <p>{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ========== CTA ========== -->
  <section class="section-cta">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Write Your Success Story?</h2>
        <p>Get a Growth Audit. No pitch. No pressure. Just an honest look at where the opportunities are.</p>
        <div class="cta-actions">
          <a href="/contact/" class="btn btn-white btn-lg">Schedule a Free Consultation</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ===========================
     HERO
     =========================== */
  .results-hero {
    position: relative;
    background: var(--color-bg-dark);
    color: #fff;
    padding: 5rem 1.5rem 4rem;
    overflow: hidden;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      rgba(1, 25, 7, 0.85) 0%,
      rgba(1, 25, 7, 0.78) 40%,
      rgba(1, 25, 7, 0.68) 100%
    );
  }
  .hero-container {
    position: relative;
    z-index: 2;
  }
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }
  .hero-label {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-primary-light);
    margin-bottom: 0.75rem;
    display: block;
  }
  .results-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    color: #fff;
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }
  .hero-text {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #b0b8b3;
    margin-bottom: 2rem;
    max-width: 500px;
  }
  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .hero-visual {
    display: flex;
    justify-content: flex-end;
  }
  .hero-stats {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    width: 100%;
    max-width: 340px;
  }
  .stat-item {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    transition: all 0.2s ease;
  }
  .stat-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
  }
  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary-light);
  }
  .stat-text {
    font-size: 0.875rem;
    color: #b0b8b3;
  }

  /* ===========================
     AWARDS
     =========================== */
  .section-awards {
    padding: 6rem 1.5rem;
    background: #fafafa;
    position: relative;
  }
  .section-awards::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(100, 116, 139, 0.2), transparent);
  }
  .awards-header {
    max-width: 600px;
    margin: 0 auto 4rem;
    text-align: center;
  }
  .section-badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-slate);
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.12) 0%, rgba(100, 116, 139, 0.06) 100%);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    margin-bottom: 1.25rem;
    border: 1px solid rgba(100, 116, 139, 0.15);
  }
  .awards-header h2,
  .testimonials-header h2 {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 700;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }
  .lead {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #4b5563;
  }
  .awards-header .lead,
  .testimonials-header .lead {
    max-width: 550px;
    margin: 0 auto;
  }
  .awards-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  @media (max-width: 700px) {
    .awards-grid {
      grid-template-columns: 1fr;
      max-width: 420px;
    }
  }
  .award-card {
    position: relative;
    background: #fff;
    border: 2px solid rgba(41, 140, 66, 0.15);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    text-align: center;
    box-shadow: 0 8px 32px rgba(41, 140, 66, 0.08), 0 0 0 1px rgba(41, 140, 66, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .award-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-primary-light), var(--color-mint));
    border-radius: 16px 16px 0 0;
  }
  .award-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 60px rgba(41, 140, 66, 0.15), 0 0 0 1px rgba(41, 140, 66, 0.1);
    border-color: rgba(41, 140, 66, 0.3);
  }
  .award-trophy {
    width: 72px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: 16px;
    margin: 0 auto 1.5rem;
    box-shadow: 0 8px 24px rgba(41, 140, 66, 0.3);
  }
  .award-trophy svg {
    width: 36px;
    height: 36px;
    color: #fff;
  }
  .award-year {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    background: rgba(41, 140, 66, 0.08);
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    margin-bottom: 0.75rem;
    border: 1px solid rgba(41, 140, 66, 0.12);
  }
  .award-name {
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.75rem;
    letter-spacing: -0.01em;
  }
  .award-firm {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  .award-person {
    font-size: 0.8125rem;
    color: #4b5563;
  }

  /* ===========================
     CASE STUDIES
     =========================== */
  .section-case-studies {
    padding: 6rem 1.5rem;
    background: linear-gradient(180deg, var(--color-bg-dark) 0%, #0a1f0f 100%);
    color: #fff;
  }
  .cs-header {
    max-width: 600px;
    margin: 0 auto 4rem;
    text-align: center;
  }
  .cs-badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #fff;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    margin-bottom: 1.5rem;
  }
  .cs-header h2 {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 700;
    margin-bottom: 1.25rem;
    color: #fff;
    letter-spacing: -0.02em;
  }
  .lead-dark {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #b0b8b3;
  }
  .cs-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1100px;
    margin: 0 auto;
  }
  @media (max-width: 900px) {
    .cs-grid {
      grid-template-columns: 1fr;
      max-width: 480px;
    }
  }
  .cs-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .cs-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.18);
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.3);
  }
  .cs-card-top {
    padding: 2rem 2rem 1.5rem;
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }
  .cs-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: 16px;
    flex-shrink: 0;
    box-shadow: 0 4px 16px rgba(41, 140, 66, 0.3);
  }
  .cs-icon svg {
    width: 26px;
    height: 26px;
    color: #fff;
  }
  .cs-metric-block {
    flex: 1;
  }
  .cs-metric {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-primary-light);
    line-height: 1;
    margin-bottom: 0.375rem;
    letter-spacing: -0.02em;
  }
  .cs-metric-label {
