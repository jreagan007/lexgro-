---
/**
 * Evergreen Marketing Training Service Page
 */
import BaseLayout from '../../layouts/BaseLayout.astro';

const modules = [
  { title: 'Marketing Foundations', lessons: 8, description: 'Build your marketing strategy from the ground up' },
  { title: 'Digital Advertising', lessons: 6, description: 'Master Google Ads, Facebook, and LSAs' },
  { title: 'SEO for Law Firms', lessons: 7, description: 'Rank higher and attract organic traffic' },
  { title: 'Content Marketing', lessons: 5, description: 'Create content that converts' },
  { title: 'Intake Optimization', lessons: 6, description: 'Turn more leads into signed clients' },
  { title: 'Referral Systems', lessons: 4, description: 'Build a predictable referral pipeline' },
  { title: 'Brand Development', lessons: 5, description: 'Stand out in your market' },
  { title: 'Analytics and ROI', lessons: 6, description: 'Measure what matters' },
  { title: 'Scaling Your Marketing', lessons: 5, description: 'Grow without losing control' },
];
---

<BaseLayout
  title="Evergreen Marketing Training"
  description="Comprehensive marketing training for law firm owners and teams. Learn proven strategies at your own pace."
  image="/og/services.png"
>
  <!-- Hero Section -->
  <section class="service-hero">
    <div class="container">
      <div class="hero-content">
        <span class="section-label">Training Program</span>
        <h1 class="hero-title">Evergreen Marketing Training</h1>
        <p class="hero-subtitle">
          Master law firm marketing with our comprehensive training library. Learn proven strategies, use our tools, and implement at your own pace.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">9</span>
            <span class="stat-label">Modules</span>
          </div>
          <div class="stat">
            <span class="stat-number">52+</span>
            <span class="stat-label">Lessons</span>
          </div>
          <div class="stat">
            <span class="stat-number">25+</span>
            <span class="stat-label">Tools</span>
          </div>
        </div>
        <div class="hero-cta">
          <a href="/contact/" class="btn btn-primary btn-lg">
            Get Access
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="included-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">What's Included</span>
        <h2 class="section-title">Everything You Need to Succeed</h2>
      </div>

      <div class="included-grid">
        <div class="included-card">
          <div class="included-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
          </div>
          <h3>Video Training Library</h3>
          <p>Step-by-step video lessons covering every aspect of law firm marketing.</p>
        </div>
        <div class="included-card">
          <div class="included-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
            </svg>
          </div>
          <h3>Templates and SOPs</h3>
          <p>Ready-to-use templates, scripts, and standard operating procedures.</p>
        </div>
        <div class="included-card">
          <div class="included-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
          </div>
          <h3>Calculators and Tools</h3>
          <p>ROI calculators, budget planners, and tracking spreadsheets.</p>
        </div>
        <div class="included-card">
          <div class="included-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
          </div>
          <h3>Practice Area Specific</h3>
          <p>Strategies tailored for PI, family law, immigration, and more.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Modules Section -->
  <section class="modules-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label-dark">Curriculum</span>
        <h2 class="section-title-light">9 Comprehensive Modules</h2>
      </div>

      <div class="modules-grid">
        {modules.map((module, index) => (
          <div class="module-card">
            <span class="module-number">{String(index + 1).padStart(2, '0')}</span>
            <h3 class="module-title">{module.title}</h3>
            <p class="module-description">{module.description}</p>
            <span class="module-lessons">{module.lessons} lessons</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="pricing-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Pricing</span>
        <h2 class="section-title">Simple, Affordable Access</h2>
      </div>

      <div class="pricing-card-single">
        <div class="price-display">
          <span class="price">$97</span>
          <span class="period">/month</span>
        </div>
        <p class="price-description">
          Full access to all training modules, templates, tools, and resources.
        </p>
        <ul class="price-features">
          <li>All 9 training modules</li>
          <li>25+ marketing tools and templates</li>
          <li>Practice area specific content</li>
          <li>Regular content updates</li>
          <li>Cancel anytime</li>
        </ul>
        <a href="/contact/" class="btn btn-primary btn-lg">
          Get Started
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Master Law Firm Marketing?</h2>
        <p class="cta-subtitle">
          Join hundreds of attorneys who have transformed their marketing with our training.
        </p>
        <div class="cta-buttons">
          <a href="/contact/" class="btn btn-primary btn-lg">
            Start Learning Today
          </a>
          <a href="/services/" class="btn btn-secondary btn-lg">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .service-hero {
    padding: 5rem 0;
    background: linear-gradient(180deg, var(--color-bg-light) 0%, white 100%);
  }

  .hero-content {
    max-width: 700px;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .section-label-dark {
    color: var(--color-mint);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .hero-stats {
    display: flex;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-primary);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* Included Section */
  .included-section {
    padding: 5rem 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-text-dark);
  }

  .section-title-light {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
  }

  .included-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .included-card {
    padding: 2rem;
    background: var(--color-bg-light);
    border-radius: 16px;
    text-align: center;
  }

  .included-icon {
    width: 64px;
    height: 64px;
    background: white;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: var(--color-primary);
  }

  .included-card h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .included-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  /* Modules Section */
  .modules-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .module-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
  }

  .module-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-mint);
    opacity: 0.5;
    display: block;
    margin-bottom: 0.5rem;
  }

  .module-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .module-description {
    font-size: 0.9375rem;
    color: #b0b8b3;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .module-lessons {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-mint);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Pricing Section */
  .pricing-section {
    padding: 5rem 0;
    background: white;
  }

  .pricing-card-single {
    max-width: 500px;
    margin: 0 auto;
    padding: 3rem;
    background: white;
    border: 2px solid var(--color-primary);
    border-radius: 24px;
    text-align: center;
  }

  .price-display {
    margin-bottom: 1rem;
  }

  .price {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-text-dark);
  }

  .period {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .price-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .price-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .price-features li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 1rem;
    color: var(--color-text-dark);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .price-features li::before {
    content: "âœ“";
    color: var(--color-primary);
    font-weight: 700;
  }

  /* CTA */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-teal) 100%);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: #b0b8b3;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .cta-section .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn-secondary {
    border-color: white;
    color: white;
  }

  .cta-section .btn-secondary:hover {
    background: white;
    color: var(--color-primary);
  }
</style>
