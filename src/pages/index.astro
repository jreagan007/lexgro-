---
/**
 * LEXGRO Homepage
 * Fractional CMO for injury law firms doing $2M-$15M
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { testimonials } from '../data/testimonials';

// Import trust assets
import trustAvatars1 from '../assets/images/heroes/trust-avatars-1.png';
import trustAvatars2 from '../assets/images/heroes/trust-avatars-2.png';
import trustAvatars3 from '../assets/images/heroes/trust-avatars-3.png';

// Get the 3 featured testimonials with quotes
const featuredTestimonials = testimonials.filter(t =>
  ['Clarke Speaks', 'Matthew Albrecht', 'Riah Greathouse'].includes(t.name)
);
---

<BaseLayout
  title="Your Fractional CMO for Law Firms | LEXGRO"
  description="We run marketing for injury law firms doing $2M to $15M. We coordinate your vendors, fix your intake, and build systems that drive signed cases."
  image="/og/homepage.png"
>
  <!-- 1. Hero -->
  <section class="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="hero-label">The Law Firm CMO</p>
          <h1>Your CMO. Your Growth Partner.</h1>
          <p class="hero-text">
            We run marketing for injury law firms doing $2M to $15M. We coordinate your vendors, fix your intake, and build systems that drive signed cases. Not clicks. When you win, we win.
          </p>
          <div class="hero-actions">
            <a href="/contact/" class="btn btn-primary btn-lg">Apply for Growth Diagnostic</a>
            <a href="/how-we-work/" class="btn btn-ghost btn-lg">How We Work</a>
          </div>
        </div>
        <div class="hero-visual">
          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-value">47</span>
              <span class="stat-text">Law firm partners</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">12</span>
              <span class="stat-text">Years in legal marketing</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">$47M+</span>
              <span class="stat-text">Revenue generated for law firm partners</span>
            </div>
          </div>
        </div>
      </div>
      <div class="hero-trust">
        <p class="trust-label">Trusted by injury law firms across the country</p>
        <div class="trust-avatars">
          <Image src={trustAvatars1} alt="Law firm partners" width={400} />
          <Image src={trustAvatars2} alt="Law firm partners" width={400} />
          <Image src={trustAvatars3} alt="Law firm partners" width={400} />
        </div>
      </div>
    </div>
  </section>

  <!-- 2. Social Proof -->
  <section class="section-social-proof">
    <div class="container">
      <div class="social-proof-header">
        <span class="section-badge">Real Results</span>
        <h2>What Our Partners Say</h2>
      </div>
      <div class="testimonial-grid">
        {featuredTestimonials.map((t) => (
          <div class="testimonial-card">
            <div class="testimonial-quote">
              <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l0.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l0.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
              <p>"{t.quote}"</p>
            </div>
            <div class="testimonial-author">
              <img src={t.photo} alt={t.name} class="testimonial-photo" width="48" height="48" loading="lazy" />
              <div class="testimonial-info">
                <strong>{t.name}</strong>
                <span>{t.firm} Â· {t.location}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 3. Problem -->
  <section class="section-problem">
    <div class="container">
      <div class="problem-header">
        <span class="section-badge">The Real Problem</span>
        <h2>You're Spending Money. You're Not Getting Cases.</h2>
        <p class="lead">Most injury firms between $2M and $15M spend $10K or more per month on marketing. SEO vendors, PPC agencies, maybe a TV buyer. But nobody owns the strategy. And nobody is accountable for signed cases.</p>
      </div>
      <div class="problem-grid">
        <div class="problem-card">
          <span class="problem-num">01</span>
          <div class="problem-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="6" cy="6" r="3"/>
              <circle cx="18" cy="6" r="3"/>
              <circle cx="6" cy="18" r="3"/>
              <circle cx="18" cy="18" r="3"/>
              <path d="M6 9v6M18 9v6" opacity="0.3"/>
            </svg>
          </div>
          <h3>No Strategic Oversight</h3>
          <p>Your SEO vendor, PPC agency, and TV buyer all report different numbers. Nobody connects them. Nobody owns the outcome. You're the one stuck managing it all.</p>
        </div>
        <div class="problem-card">
          <span class="problem-num">02</span>
          <div class="problem-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2v6l3-3"/>
              <path d="M12 8l-3-3"/>
              <path d="M20 12a8 8 0 1 1-16 0"/>
              <path d="M12 22v-6"/>
              <circle cx="12" cy="16" r="0.5" fill="currentColor"/>
            </svg>
          </div>
          <h3>Intake Leaks Revenue</h3>
          <p>Your marketing brings in calls. Your intake process loses them. Missed calls, slow follow-up, no tracking. That gap costs six figures a year.</p>
        </div>
        <div class="problem-card">
          <span class="problem-num">03</span>
          <div class="problem-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="9"/>
              <path d="M12 8v4"/>
              <circle cx="12" cy="16" r="0.5" fill="currentColor"/>
              <path d="M8.5 8.5l-3-3M15.5 8.5l3-3M8.5 15.5l-3 3M15.5 15.5l3 3" opacity="0.4"/>
            </svg>
          </div>
          <h3>Vendors Run Unchecked</h3>
          <p>Each vendor optimizes for their own metrics. Clicks. Rankings. Impressions. None of them optimize for signed cases. And they don't talk to each other.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. Solution -->
  <section class="section-solution">
    <div class="container">
      <div class="solution-header">
        <p class="section-label">The Solution</p>
        <h2>One Partner. Every Channel. Full Accountability.</h2>
        <p class="lead">We sit above your vendors and manage the full marketing picture. Every channel works together toward one number: signed cases.</p>
      </div>
      <div class="solution-grid">
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
          <span>SEO and content</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 8v4l3 3"/></svg>
          <span>Google Ads and LSAs</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="15" rx="2" ry="2"/><polyline points="17 2 12 7 7 2"/></svg>
          <span>Connected TV (CTV)</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          <span>Social media</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c0.127.96.361 1.903.7 2.81a2 2 0 0 1-0.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-0.45c0.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          <span>Intake optimization</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          <span>Vendor management</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
          <span>Attribution and reporting</span>
        </div>
        <div class="solution-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/><path d="M8 7h8M8 11h6"/></svg>
          <span>Team training and SOPs</span>
        </div>
      </div>
      <p class="solution-statement">You don't hire more vendors. You hire the person who makes your vendors work.</p>
    </div>
  </section>

  <!-- 5. LEXXLY -->
  <section class="section-lexxly">
    <div class="container">
      <div class="lexxly-header">
        <span class="section-badge">The Technology</span>
        <h2>Built on LEXXLY. How We See What Others Miss.</h2>
        <p class="lead">We back every decision with data from LEXXLY, our proprietary platform. It shows us what's working, what's not, and where your cases are coming from.</p>
      </div>
      <div class="lexxly-grid">
        <div class="lexxly-card">
          <span class="lexxly-num">01</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>LexxlyRank</h3>
          <p>See exactly where you rank against every competitor in your market. Updated weekly.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">02</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <h3>LexxlyPulse</h3>
          <p>Track your marketing performance across all channels in one dashboard. No more spreadsheet chaos.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">03</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2a10 10 0 0 1 10 10c0 5.523-4.477 10-10 10S2 17.523 2 12"/>
              <path d="M12 6v6l4 2"/>
              <path d="M2 12h4"/>
            </svg>
          </div>
          <h3>LexxlyIQ</h3>
          <p>Spots trends, flags problems, and recommends next moves before you ask.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">04</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <line x1="18" y1="20" x2="18" y2="10"/>
              <line x1="12" y1="20" x2="12" y2="4"/>
              <line x1="6" y1="20" x2="6" y2="14"/>
            </svg>
          </div>
          <h3>LexxlyAIO</h3>
          <p>Automated reporting that connects ad spend to signed cases. Not clicks. Cases.</p>
        </div>
      </div>
      <div class="lexxly-cta">
        <a href="/lexxly/" class="btn btn-outline-light">See the Full Platform</a>
      </div>
    </div>
  </section>

  <!-- 6. How We Work -->
  <section class="section-how">
    <div class="container">
      <div class="how-header">
        <span class="section-badge">The Process</span>
        <h2>Three Phases. 90 Days to Results.</h2>
        <p class="lead">We don't run month-to-month experiments. We follow a three-phase process that gets injury law firms to real momentum in 90 days.</p>
      </div>
      <div class="how-grid">
        <div class="how-card">
          <span class="how-num">01</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>Diagnose</h3>
          <p>Full audit of your market, vendors, intake, website, and ad spend. We use LEXXLY to benchmark your position against every competitor in your area.</p>
        </div>
        <div class="how-card">
          <span class="how-num">02</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 19l7-7 3 3-7 7-3-3z"/>
              <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
              <path d="M2 2l7.586 7.586"/>
              <circle cx="11" cy="11" r="2"/>
            </svg>
          </div>
          <h3>Install</h3>
          <p>We build your 90-day growth plan, restructure vendor accountability, connect marketing to intake, and launch priority campaigns.</p>
        </div>
        <div class="how-card">
          <span class="how-num">03</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <h3>Scale</h3>
          <p>Monthly optimization, vendor scorecards, intake monitoring, and quarterly strategy reviews. We measure signed cases, not vanity metrics.</p>
        </div>
      </div>
      <div class="how-cta">
        <a href="/how-we-work/" class="btn btn-outline-light">See How We Work</a>
      </div>
    </div>
  </section>

  <!-- 7. Qualification -->
  <section class="section-who">
    <div class="container">
      <div class="who-header">
        <span class="who-label">Who We Partner With</span>
        <h2>Built for Injury Law Firms Doing $2M to $15M</h2>
        <p class="lead">We work with a small number of firms at a time. That focus is what drives results. If you fit the criteria below, we should talk.</p>
      </div>
      <div class="who-grid">
        <div class="who-card who-card-not">
          <h3>LEXGRO Is Not For</h3>
          <ul>
            <li>Firms under $2M in annual revenue</li>
            <li>Firms spending under $5K/month on marketing</li>
            <li>Firms looking for a one-time project</li>
            <li>Firms that won't share financial data with their growth partner</li>
            <li>Firms that want to "set it and forget it"</li>
          </ul>
        </div>
        <div class="who-card who-card-yes">
          <h3>LEXGRO Is For</h3>
          <ul>
            <li>Injury firms doing $2M to $15M in revenue</li>
            <li>Firms spending $5K+ per month on marketing</li>
            <li>Owners who want real accountability from their marketing</li>
            <li>Firms tired of managing vendors themselves</li>
            <li>Firms ready to treat marketing as a revenue investment</li>
          </ul>
        </div>
      </div>
      <div class="who-scarcity">
        <p>Currently working with 10 firms. Accepting 5 new partners in 2026.</p>
      </div>
    </div>
  </section>

  <!-- 8. CTA -->
  <section class="section-cta">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Grow?</h2>
        <p>Apply for an Executive Growth Diagnostic. No pitch. No pressure. We review your market, your vendors, and your numbers. Then we tell you exactly what to fix.</p>
        <div class="cta-actions">
          <a href="/contact/" class="btn btn-white btn-lg">Apply for Growth Diagnostic</a>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* Hero */
  .hero {
    background: var(--color-bg-dark);
    color: #fff;
    padding: 4rem 1.5rem 3rem;
  }
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 3rem;
  }
  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }
  .hero-label {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-primary-light);
    margin-bottom: 0.75rem;
  }
  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.15;
    color: #fff;
    margin-bottom: 1.25rem;
  }
  .hero-text {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #b0b8b3;
    margin-bottom: 2rem;
  }
  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .hero-visual {
    display: flex;
    justify-content: flex-end;
  }
  .hero-stats {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  .stat-item {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
  }
  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary-light);
  }
  .stat-text {
    font-size: 0.875rem;
    color: #b0b8b3;
  }
  .hero-trust {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .trust-label {
    font-size: 0.8125rem;
    color: #b0b8b3;
    margin-bottom: 1rem;
  }
  .trust-avatars {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .trust-avatars img {
    height: 40px;
    width: auto;
  }

  /* Shared section utilities */
  .section-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  .lead {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #4b5563;
  }
  .section-badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-slate);
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.12) 0%, rgba(100, 116, 139, 0.06) 100%);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    margin-bottom: 1.25rem;
    border: 1px solid rgba(100, 116, 139, 0.15);
  }

  /* 2. Social Proof */
  .section-social-proof {
    padding: 6rem 1.5rem;
    background: #fafafa;
    position: relative;
  }
  .section-social-proof::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(100, 116, 139, 0.2), transparent);
  }
  .social-proof-header {
    max-width: 600px;
    margin: 0 auto 4rem;
    text-align: center;
  }
  .social-proof-header h2 {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 700;
    color: var(--color-text-dark);
    letter-spacing: -0.02em;
  }
  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }
  @media (max-width: 900px) {
    .testimonial-grid {
      grid-template-columns: 1fr;
      max-width: 480px;
      gap: 1.5rem;
    }
  }
  .testimonial-card {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
  }
  .testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-primary-light));
    border-radius: 16px 16px 0 0;
  }
  .quote-icon {
    width: 24px;
    height: 24px;
    color: rgba(41, 140, 66, 0.2);
    margin-bottom: 0.75rem;
    flex-shrink: 0;
  }
  .testimonial-quote p {
    font-size: 1rem;
    line-height: 1.65;
    color: var(--color-text-dark);
    margin: 0 0 1.5rem;
    font-style: italic;
  }
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }
  .testimonial-photo {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
