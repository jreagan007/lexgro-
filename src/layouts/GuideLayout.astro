  }

  /* Guide Content */
  .guide-content {
    order: 1;
    max-width: 720px;
  }

  @media (min-width: 1024px) {
    .guide-content {
      order: 2;
    }
  }

  /* Prose Styles */
  .prose {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-text-dark);
  }

  .prose :global(h2) {
    font-size: 1.625rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text-dark);
    scroll-margin-top: 100px;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
