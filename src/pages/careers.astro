---
/**
 * Careers Page
 *
 * Job opportunities at LEXGRO
 */
import BaseLayout from '../layouts/BaseLayout.astro';

interface JobOpening {
  title: string;
  type: string;
  location: string;
  description: string;
  requirements: string[];
}

const openings: JobOpening[] = [
  {
    title: 'Marketing Strategist',
    type: 'Full-time',
    location: 'Remote (US)',
    description: 'Work directly with law firm clients to develop and execute marketing strategies. You\'ll manage client relationships, oversee vendor performance, and drive measurable growth.',
    requirements: [
      '3+ years marketing experience, preferably in legal or professional services',
      'Experience with Google Ads, Facebook Ads, and SEO',
      'Strong analytical and communication skills',
      'Ability to manage multiple client accounts',
    ],
  },
  {
    title: 'Content Marketing Manager',
    type: 'Full-time',
    location: 'Remote (US)',
    description: 'Lead content strategy for LEXGRO and our client law firms. Create educational content, manage our podcast, and develop content systems that scale.',
    requirements: [
      '3+ years content marketing experience',
      'Experience with SEO and content strategy',
      'Strong writing and editing skills',
      'Familiarity with legal industry a plus',
    ],
  },
];
---

<BaseLayout
  title="Careers at LEXGRO"
  description="Join the LEXGRO team. Remote-first marketing roles helping law firms grow. Marketing strategist and content manager positions available."
  image="/og/careers.png"
>
  <!-- Hero Section -->
  <section class="careers-hero">
    <div class="container">
      <div class="hero-content">
        <span class="section-label">Careers</span>
        <h1 class="hero-title">Join the LEXGRO Team</h1>
        <p class="hero-subtitle">
          We're building the future of law firm marketing. If you're passionate about helping lawyers grow their practices, we want to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Join Section -->
  <section class="why-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Why Work at LEXGRO</h2>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card">
          <h3>Remote-First</h3>
          <p>Work from anywhere in the US. We believe great work happens when you're comfortable.</p>
        </div>
        <div class="benefit-card">
          <h3>Meaningful Impact</h3>
          <p>Help law firms grow their practices and serve more clients who need legal help.</p>
        </div>
        <div class="benefit-card">
          <h3>Growth Focused</h3>
          <p>We invest in your development. Learn from experienced marketers and grow your skills.</p>
        </div>
        <div class="benefit-card">
          <h3>Small Team, Big Impact</h3>
          <p>Your work matters here. No bureaucracy, just results and collaboration.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Open Positions Section -->
  <section class="positions-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Open Positions</h2>
      </div>

      {openings.length > 0 ? (
        <div class="positions-list">
          {openings.map((job) => (
            <div class="position-card">
              <div class="position-header">
                <div class="position-info">
                  <h3 class="position-title">{job.title}</h3>
                  <div class="position-meta">
                    <span class="meta-badge">{job.type}</span>
                    <span class="meta-location">{job.location}</span>
                  </div>
                </div>
              </div>
              <div class="position-content">
                <p class="position-description">{job.description}</p>
                <h4>Requirements:</h4>
                <ul class="requirements-list">
                  {job.requirements.map((req) => (
                    <li>{req}</li>
                  ))}
                </ul>
              </div>
              <div class="position-footer">
                <a href="mailto:careers@lexgro.com?subject=Application: {job.title}" class="btn btn-primary">
                  Apply Now
                </a>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="no-positions">
          <p>We don't have any open positions at the moment, but we're always interested in hearing from talented marketers.</p>
          <a href="mailto:careers@lexgro.com" class="btn btn-secondary">
            Send Your Resume
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- General Application Section -->
  <section class="apply-section">
    <div class="container">
      <div class="apply-card">
        <h2 class="apply-title">Don't See Your Role?</h2>
        <p class="apply-description">
          We're always looking for talented people who share our passion for helping law firms grow. Send us your resume and tell us how you can contribute.
        </p>
        <a href="mailto:careers@lexgro.com" class="btn btn-primary btn-lg">
          Send Your Resume
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .careers-hero {
    padding: 5rem 0 3rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0 percent, white 100 percent);
  }

  .hero-content {
    max-width: 650px;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Why Section */
  .why-section {
    padding: 5rem 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-text-dark);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .benefit-card {
    padding: 2rem;
    background: var(--color-bg-light);
    border-radius: 16px;
    text-align: center;
  }

  .benefit-card h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.75rem;
  }

  .benefit-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Positions Section */
  .positions-section {
    padding: 5rem 0;
    background: var(--color-bg-light);
  }

  .positions-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .position-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .position-header {
    padding: 1.5rem 2rem;
    background: var(--color-bg-dark);
  }

  .position-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .position-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .meta-badge {
    padding: 0.25rem 0.75rem;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 100px;
    text-transform: uppercase;
  }

  .meta-location {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .position-content {
    padding: 2rem;
  }

  .position-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .position-content h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-dark);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .requirements-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .requirements-list li {
    position: relative;
    padding-left: 1.5rem;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }

  .requirements-list li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: 700;
  }

  .position-footer {
    padding: 0 2rem 2rem;
  }

  .no-positions {
    text-align: center;
    padding: 3rem;
    background: white;
    border-radius: 20px;
  }

  .no-positions p {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  /* Apply Section */
  .apply-section {
    padding: 5rem 0;
    background: white;
  }

  .apply-card {
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem;
    background: linear-gradient(135deg, var(--color-primary) 0 percent, var(--color-teal) 100 percent);
    border-radius: 24px;
    text-align: center;
  }

  .apply-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .apply-description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .apply-card .btn-primary {
    background: white;
    color: var(--color-primary);
  }
</style>
