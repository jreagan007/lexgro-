---
/**
 * Guide Index Page
 *
 * Visual design aligned with homepage patterns:
 * dark hero, slate badges, #fafafa light sections,
 * cards with top gradient borders, green icon containers.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import heroBackground from '../../assets/images/heroes/guide-index-hero.jpg';
import { getCollection } from 'astro:content';

// Get all published guides
const allGuides = await getCollection('guides', ({ data }) => !data.draft);

// Sort by date, newest first
const sortedGuides = allGuides.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get card image for each guide
function getGuideCardImage(slug: string): string {
  return `/cards/guide/${slug}.png`;
}

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
}

// Featured guide (first one or marked as featured)
const featuredGuide = sortedGuides.find(g => g.data.featured) || sortedGuides[0];
const regularGuides = sortedGuides.filter(g => g !== featuredGuide);
---

<BaseLayout
  title="Law Firm Marketing Guides"
  description="In-depth marketing guides for attorneys. Learn fractional CMO strategy, SEO, PPC, lead generation, and more from Keith Dyer and LEXGRO."
  image="/og/guide.png"
>
  <!-- Hero Section -->
  <section class="guide-hero">
    <Image src={heroBackground} alt="" class="hero-bg" widths={[800, 1200, 1920]} sizes="100vw" loading="eager" />
    <div class="hero-overlay"></div>
    <div class="container hero-container">
      <span class="hero-label">LEXGRO Guides</span>
      <h1 class="hero-title">In-Depth Marketing Guides</h1>
      <p class="hero-subtitle">
        Comprehensive, expert-written guides to help you master law firm marketing.
        No fluff. Just actionable strategies that work.
      </p>
    </div>
  </section>

  <!-- Featured Guide -->
  {featuredGuide && (
    <section class="featured-section">
      <div class="container">
        <a href={`/guide/${featuredGuide.data.slug}/`} class="featured-card">
          <div class="featured-image">
            <img
              src={getGuideCardImage(featuredGuide.data.slug)}
              alt={featuredGuide.data.title}
              width="800"
              height="450"
              class="featured-img"
              loading="eager"
            />
            <span class="featured-badge">Pillar Guide</span>
          </div>
          <div class="featured-content">
            <span class="guide-category">Fractional CMO</span>
            <h2 class="featured-title">{featuredGuide.data.title}</h2>
            <p class="featured-excerpt">{featuredGuide.data.description}</p>
            <div class="guide-meta">
              <span class="guide-date">{formatDate(featuredGuide.data.pubDate)}</span>
              <span class="guide-time">
                {featuredGuide.data.wordCount
                  ? `${Math.ceil(featuredGuide.data.wordCount / 200)} min read`
                  : '25+ min read'}
              </span>
              <span class="read-more">Read Guide →</span>
            </div>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- All Guides Grid -->
  {regularGuides.length > 0 && (
    <section class="guides-grid-section">
      <div class="container">
        <div class="grid-header">
          <span class="section-badge">Browse Guides</span>
          <h2 class="grid-title">More Guides</h2>
        </div>
