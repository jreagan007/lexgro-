---
/**
 * Guide Index Page
 *
 * Clean, visual layout matching the blog page design.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all published guides
const allGuides = await getCollection('guides', ({ data }) => !data.draft);

// Sort by date, newest first
const sortedGuides = allGuides.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get card image for each guide
function getGuideCardImage(slug: string): string {
  return `/cards/guide/${slug}.png`;
}

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
}

// Featured guide (first one or marked as featured)
const featuredGuide = sortedGuides.find(g => g.data.featured) || sortedGuides[0];
const regularGuides = sortedGuides.filter(g => g !== featuredGuide);
---

<BaseLayout
  title="Law Firm Marketing Guides"
  description="In-depth marketing guides for attorneys. Learn fractional CMO strategy, SEO, PPC, lead generation, and more from Keith Dyer and LEXGRO."
  image="/og/guide.png"
>
  <!-- Hero Section -->
  <section class="guide-hero">
    <div class="container">
      <span class="section-label">LEXGRO Guides</span>
      <h1 class="hero-title">In-Depth Marketing Guides</h1>
      <p class="hero-subtitle">
        Comprehensive, expert-written guides to help you master law firm marketing.
        No fluff. Just actionable strategies that work.
      </p>
    </div>
  </section>

  <!-- Featured Guide -->
  {featuredGuide && (
    <section class="featured-section">
      <div class="container">
        <a href={`/guide/${featuredGuide.data.slug}/`} class="featured-card">
          <div class="featured-image">
            <img
              src={getGuideCardImage(featuredGuide.data.slug)}
              alt={featuredGuide.data.title}
              width="800"
              height="450"
              class="featured-img"
              loading="eager"
            />
            <span class="featured-badge">Pillar Guide</span>
          </div>
          <div class="featured-content">
            <span class="guide-category">Fractional CMO</span>
            <h2 class="featured-title">{featuredGuide.data.title}</h2>
            <p class="featured-excerpt">{featuredGuide.data.description}</p>
            <div class="guide-meta">
              <span class="guide-date">{formatDate(featuredGuide.data.pubDate)}</span>
              <span class="guide-time">
                {featuredGuide.data.wordCount
                  ? `${Math.ceil(featuredGuide.data.wordCount / 200)} min read`
                  : '25+ min read'}
              </span>
              <span class="read-more">Read Guide ‚Üí</span>
            </div>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- All Guides Grid -->
  {regularGuides.length > 0 && (
    <section class="guides-grid-section">
      <div class="container">
        <h2 class="grid-title">More Guides</h2>
        <div class="guides-grid">
          {regularGuides.map((guide) => (
            <a href={`/guide/${guide.data.slug}/`} class="guide-card">
              <div class="card-image">
                <img
                  src={getGuideCardImage(guide.data.slug)}
                  alt={guide.data.title}
                  width="400"
                  height="225"
                  class="card-img"
                  loading="lazy"
                />
              </div>
              <div class="card-content">
                <span class="guide-category">Guide</span>
                <h3 class="card-title">{guide.data.title}</h3>
                <p class="card-excerpt">{guide.data.description}</p>
                <span class="guide-date">{formatDate(guide.data.pubDate)}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Coming Soon Section -->
  <section class="coming-soon-section">
    <div class="container">
      <div class="coming-soon-content">
        <span class="section-label-dark">Coming Soon</span>
        <h2 class="coming-soon-title">More Guides in Development</h2>
        <p class="coming-soon-text">
          We're constantly creating new in-depth guides. Topics in development include:
        </p>
        <div class="upcoming-topics">
          <span class="upcoming-tag">SEO for Personal Injury</span>
          <span class="upcoming-tag">PPC Budget Optimization</span>
          <span class="upcoming-tag">Intake Process Mastery</span>
          <span class="upcoming-tag">Family Law Marketing</span>
          <span class="upcoming-tag">Criminal Defense Growth</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Resources Section -->
  <section class="resources-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Explore More</span>
        <h2 class="section-title">Other Resources</h2>
      </div>

      <div class="resources-grid">
        <a href="/blog/" class="resource-card">
          <div class="resource-icon">üìù</div>
          <h3 class="resource-title">Blog</h3>
          <p class="resource-description">
            Shorter articles on marketing tactics, trends, and strategies for law firms.
          </p>
          <span class="resource-link">Read Blog ‚Üí</span>
        </a>

        <a href="/answers/" class="resource-card">
          <div class="resource-icon">üí°</div>
          <h3 class="resource-title">Quick Answers</h3>
          <p class="resource-description">
            Get fast answers to common law firm marketing questions in 5 minutes or less.
          </p>
          <span class="resource-link">Browse Answers ‚Üí</span>
        </a>

        <a href="/podcast/" class="resource-card">
          <div class="resource-icon">üéôÔ∏è</div>
          <h3 class="resource-title">Podcast</h3>
          <p class="resource-description">
            Listen to Keith Dyer discuss law firm growth strategies with industry experts.
          </p>
          <span class="resource-link">Listen Now ‚Üí</span>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready for Personalized Strategy?</h2>
        <p class="cta-subtitle">
          Guides are great for learning, but nothing beats hands-on help.
          Let's discuss your firm's specific marketing challenges.
        </p>
        <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
          Schedule a Free Consultation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .guide-hero {
    padding: 5rem 0 3rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0%, white 100%);
    text-align: center;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .section-label-dark {
    color: var(--color-mint);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Featured Section */
  .featured-section {
    padding: 3rem 0;
    background: white;
  }

  .featured-card {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: box-shadow 0.3s ease;
  }

  .featured-card:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  @media (min-width: 900px) {
    .featured-card {
      grid-template-columns: 1.2fr 1fr;
    }
  }

  .featured-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .featured-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .guide-category {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .featured-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    line-height: 1.25;
    margin-bottom: 1rem;
  }

  .featured-excerpt {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .guide-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .guide-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .guide-time {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    padding-left: 1rem;
    border-left: 1px solid var(--color-border);
  }

  .read-more {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-left: auto;
  }

  /* Guides Grid */
  .guides-grid-section {
    padding: 3rem 0 5rem;
    background: var(--color-bg-light);
  }

  .grid-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 2rem;
  }

  .guides-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 600px) {
    .guides-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1000px) {
    .guides-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .guide-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .guide-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  .card-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .guide-card:hover .card-img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .card-excerpt {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Coming Soon Section */
  .coming-soon-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
    text-align: center;
  }

  .coming-soon-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .coming-soon-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    color: white;
    margin-bottom: 1rem;
  }

  .coming-soon-text {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .upcoming-topics {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .upcoming-tag {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.875rem;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Resources Section */
  .resources-section {
    padding: 5rem 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    line-height: 1.2;
    color: var(--color-text-dark);
  }

  .resources-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .resources-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .resource-card {
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  .resource-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .resource-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .resource-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .resource-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-teal) 100%);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-section .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn-primary:hover {
    background: rgba(255, 255, 255, 0.9);
  }
</style>
