  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

