---
/**
 * LEXGRO Homepage
 * Strategic Marketing Oversight for Personal Injury Firms
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { testimonials } from '../data/testimonials';

// Import hero background and trust assets
import heroBackground from '../assets/images/heroes/hero-main.png';
import trustAvatars1 from '../assets/images/heroes/trust-avatars-1.png';
import trustAvatars2 from '../assets/images/heroes/trust-avatars-2.png';
import trustAvatars3 from '../assets/images/heroes/trust-avatars-3.png';

// Get the 3 featured testimonials with quotes
const featuredTestimonials = testimonials.filter(t =>
  ['Clarke Speaks', 'Matthew Albrecht', 'Riah Greathouse'].includes(t.name)
);
---

<BaseLayout
  title="Strategic Marketing Oversight for Personal Injury Firms | LEXGRO"
  description="Fractional CMO services for PI firms doing $2M to $15M. We lead your agencies, fix your intake, and build systems that drive signed cases. Not clicks."
  image="/og/homepage.png"
>
  <!-- 1. Hero -->
  <section class="hero">
    <Image
      src={heroBackground}
      alt=""
      class="hero-bg"
      widths={[800, 1200, 1920]}
      sizes="100vw"
      loading="eager"
    />
    <div class="hero-overlay"></div>
    <div class="container hero-container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="hero-label">Fractional CMO for Personal Injury</p>
          <h1>Strategic Marketing Oversight for Personal Injury Firms Ready to Scale to $15M.</h1>
          <p class="hero-text">
            You don't need another agency. You need someone who leads them. LEXGRO provides fractional CMO services built for founder-led PI firms doing $2M to $15M. We align your vendors, fix your intake, and make every marketing dollar accountable to signed cases.
          </p>
          <p class="hero-scarcity">We partner with a limited number of founder-led PI firms at a time.</p>
          <div class="hero-actions">
            <a href="/contact/" class="btn btn-primary btn-lg">Apply for Executive Growth Diagnostic</a>
            <a href="/how-we-work/" class="btn btn-ghost btn-lg">See If Your Firm Qualifies</a>
          </div>
        </div>
        <div class="hero-visual">
          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-value">47</span>
              <span class="stat-text">Law firm partners</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">25</span>
              <span class="stat-text">Years in legal marketing</span>
            </div>
            <div class="stat-item">
              <span class="stat-value">$75M+</span>
              <span class="stat-text">Revenue generated for law firm partners</span>
            </div>
          </div>
        </div>
      </div>
      <div class="hero-trust">
        <p class="trust-label">Trusted by growing personal injury firms nationwide</p>
        <div class="trust-avatars">
          <Image src={trustAvatars1} alt="Law firm partners" width={400} />
          <Image src={trustAvatars2} alt="Law firm partners" width={400} />
          <Image src={trustAvatars3} alt="Law firm partners" width={400} />
        </div>
      </div>
    </div>
  </section>

  <!-- 2. Social Proof -->
  <section class="section-social-proof">
    <div class="container">
      <div class="social-proof-header">
        <span class="section-badge">Real Results</span>
        <h2>Trusted by Growing Personal Injury Firms Nationwide</h2>
      </div>
      <div class="testimonial-grid">
        {featuredTestimonials.map((t) => (
          <div class="testimonial-card">
            <div class="testimonial-quote">
              <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l0.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l0.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
              <p>"{t.quote}"</p>
            </div>
            <div class="testimonial-author">
              <img src={t.photo} alt={t.name} class="testimonial-photo" width="48" height="48" loading="lazy" />
              <div class="testimonial-info">
                <strong>{t.name}</strong>
                <span>{t.firm} · {t.location}</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Mini Case Study -->
      <div class="case-study-block">
        <div class="case-study-header">
          <span class="case-study-badge">Case Study</span>
          <h3>$4.2M PI Firm → $6.1M in 18 Months</h3>
        </div>
        <div class="case-study-metrics">
          <div class="case-metric">
            <span class="case-metric-value">22%</span>
            <span class="case-metric-label">Ad waste eliminated</span>
          </div>
          <div class="case-metric">
            <span class="case-metric-value">41% → 57%</span>
            <span class="case-metric-label">Intake conversion rate</span>
          </div>
          <div class="case-metric">
            <span class="case-metric-value">31%</span>
            <span class="case-metric-label">More signed cases</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. Differentiator (Agency Chaos) -->
  <section class="section-problem">
    <div class="container">
      <div class="problem-header">
        <span class="section-badge">The Real Problem</span>
        <h2>You Don't Have an Agency Problem. You Have an Oversight Problem.</h2>
      </div>
      <div class="problem-content">
        <div class="problem-text">
          <p>Your SEO vendor sends a ranking report. Your PPC agency sends a click report. Your TV buyer sends an impression report. None of them talk to each other. None of them own signed cases.</p>
          <p>You're the one stuck in the middle, trying to figure out which channel is actually working. That's not your job. That's ours.</p>
          <p>Most PI firms between $2M and $15M spend $30K or more per month on marketing with no one connecting the dots. The result: wasted spend, missed calls, and vendors optimizing for their own metrics instead of your caseload.</p>
        </div>
        <div class="problem-cards">
          <div class="problem-card">
            <span class="problem-num">01</span>
            <div class="problem-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="6" cy="6" r="3"/>
                <circle cx="18" cy="6" r="3"/>
                <circle cx="6" cy="18" r="3"/>
                <circle cx="18" cy="18" r="3"/>
                <path d="M6 9v6M18 9v6" opacity="0.3"/>
              </svg>
            </div>
            <h3>Disconnected Vendors</h3>
            <p>Each vendor optimizes for their own metrics. Clicks. Rankings. Impressions. Nobody optimizes for signed cases.</p>
          </div>
          <div class="problem-card">
            <span class="problem-num">02</span>
            <div class="problem-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2v6l3-3"/>
                <path d="M12 8l-3-3"/>
                <path d="M20 12a8 8 0 1 1-16 0"/>
                <path d="M12 22v-6"/>
                <circle cx="12" cy="16" r="0.5" fill="currentColor"/>
              </svg>
            </div>
            <h3>Intake Leaks Revenue</h3>
            <p>Your marketing brings in calls. Your intake process loses them. Missed calls, slow follow-up, no tracking.</p>
          </div>
          <div class="problem-card">
            <span class="problem-num">03</span>
            <div class="problem-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="9"/>
                <path d="M12 8v4"/>
                <circle cx="12" cy="16" r="0.5" fill="currentColor"/>
                <path d="M8.5 8.5l-3-3M15.5 8.5l3-3M8.5 15.5l-3 3M15.5 15.5l3 3" opacity="0.4"/>
              </svg>
            </div>
            <h3>No Strategic Oversight</h3>
            <p>Nobody owns the full picture. You're the default CMO, and that's not where you should spend your time.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. Fractional CMO SEO Block -->
  <section class="section-cmo-seo">
    <div class="container">
      <div class="cmo-seo-content">
        <span class="section-badge">Fractional CMO</span>
        <h2>Fractional CMO Services for Personal Injury Law Firms</h2>
        <div class="cmo-seo-text">
          <p>A fractional CMO gives your firm C-suite marketing leadership without the $300K salary. At LEXGRO, that means a senior marketing executive who knows personal injury, knows your vendors, and knows how to turn ad spend into signed cases.</p>
          <p>We don't replace your agencies. We lead them. We sit above your SEO vendor, PPC agency, TV buyer, and intake team to make sure every channel works together toward one number: signed cases.</p>
          <p>This is executive marketing oversight built for founder-led PI firms doing $2M to $15M who are tired of managing vendors themselves.</p>
        </div>
        <div class="cmo-services-grid">
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19l7-7 3 3-7 7-3-3z"/><path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/><path d="M2 2l7.586 7.586"/><circle cx="11" cy="11" r="2"/></svg>
            <span>Strategic growth planning</span>
          </div>
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="15" rx="2" ry="2"/><polyline points="17 2 12 7 7 2"/></svg>
            <span>Full-channel media planning</span>
          </div>
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            <span>Vendor and agency alignment</span>
          </div>
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c0.127.96.361 1.903.7 2.81a2 2 0 0 1-0.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-0.45c0.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <span>Intake and conversion oversight</span>
          </div>
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
            <span>Attribution and reporting</span>
          </div>
          <div class="cmo-service">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
            <span>SEO, PPC, LSA, CTV, social</span>
          </div>
        </div>
        <div class="cmo-seo-cta">
          <a href="/how-we-work/" class="btn btn-primary btn-lg">See How We Work</a>
        </div>
      </div>
    </div>
  </section>

  <!-- 5. Powered by LEXXLY -->
  <section class="section-lexxly">
    <div class="container">
      <div class="lexxly-header">
        <span class="section-badge">The Technology</span>
        <h2>Powered by LEXXLY. Your Growth Intelligence System.</h2>
        <p class="lead">Every decision we make is backed by data from LEXXLY, our proprietary intelligence platform. It connects your CRM, call tracking, ad platforms, and intake data into one view. No more spreadsheet chaos.</p>
      </div>
      <div class="lexxly-grid">
        <div class="lexxly-card">
          <span class="lexxly-num">01</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>LexxlyRank</h3>
          <p>See where you rank against every competitor in your market. Track keyword gaps, local visibility, and SEO opportunities weekly.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">02</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <h3>LexxlyPulse</h3>
          <p>Real-time marketing performance across every channel. One dashboard. Connected to signed cases, not vanity metrics.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">03</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2a10 10 0 0 1 10 10c0 5.523-4.477 10-10 10S2 17.523 2 12"/>
              <path d="M12 6v6l4 2"/>
              <path d="M2 12h4"/>
            </svg>
          </div>
          <h3>LexxlyIQ</h3>
          <p>Full-journey attribution from first impression to signed case. Know what's working and where to invest next.</p>
        </div>
        <div class="lexxly-card">
          <span class="lexxly-num">04</span>
          <div class="lexxly-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <line x1="18" y1="20" x2="18" y2="10"/>
              <line x1="12" y1="20" x2="12" y2="4"/>
              <line x1="6" y1="20" x2="6" y2="14"/>
            </svg>
          </div>
          <h3>LexxlyAIO</h3>
          <p>AI search visibility tracking across ChatGPT, Google AI Overview, and Perplexity. Stay visible where prospects research.</p>
        </div>
      </div>
      <p class="lexxly-statement">Traditional agencies show traffic. LEXXLY shows revenue impact.</p>
      <div class="lexxly-cta">
        <a href="/lexxly/" class="btn btn-outline-light">Explore the Full Platform</a>
      </div>
    </div>
  </section>

  <!-- 6. How We Work (3 Steps) -->
  <section class="section-how">
    <div class="container">
      <div class="how-header">
        <span class="section-badge">The Process</span>
        <h2>A Structured Path to Predictable Growth</h2>
        <p class="lead">We follow a three-phase process that gets PI firms to real momentum in 90 days. No month-to-month experiments. A structured system built for results.</p>
      </div>
      <div class="how-grid">
        <div class="how-card">
          <span class="how-num">01</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>Executive Diagnostic</h3>
          <p>Full audit of your market, vendors, intake, website, and ad spend. We use LEXXLY to benchmark your position against every competitor in your area.</p>
        </div>
        <div class="how-card">
          <span class="how-num">02</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 19l7-7 3 3-7 7-3-3z"/>
              <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
              <path d="M2 2l7.586 7.586"/>
              <circle cx="11" cy="11" r="2"/>
            </svg>
          </div>
          <h3>Install Strategic Oversight</h3>
          <p>We build your 90-day growth plan, restructure vendor accountability, connect marketing to intake, and launch priority campaigns.</p>
        </div>
        <div class="how-card">
          <span class="how-num">03</span>
          <div class="how-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <h3>Scale What Works</h3>
          <p>Monthly optimization, vendor scorecards, intake monitoring, and quarterly strategy reviews. We measure signed cases, not vanity metrics.</p>
        </div>
      </div>
      <div class="how-cta">
        <a href="/how-we-work/" class="btn btn-outline-light">See the Full Process</a>
      </div>
    </div>
  </section>

  <!-- 7. Founder Credibility -->
  <section class="section-founder">
    <div class="container">
      <div class="founder-content">
        <span class="section-badge">Leadership</span>
        <h2>Led by a Career Law Firm Marketing Executive</h2>
        <div class="founder-grid">
          <div class="founder-bio">
            <p>LEXGRO is led by Keith Dyer, a marketing executive with 25 years of experience building growth systems for law firms across the country.</p>
            <p>Keith has worked with 47 law firm partners, managed millions in marketing spend, and built the systems that have generated over $75M in revenue for his clients.</p>
            <p>He hosts the Law Firm Growth Podcast, speaks at legal marketing conferences, and built LEXXLY to solve the data problem he saw at every firm he worked with.</p>
            <ul class="founder-stats-list">
              <li>25 years in legal marketing</li>
              <li>47 law firm partnerships</li>
              <li>$75M+ revenue generated</li>
              <li>Host, Law Firm Growth Podcast</li>
              <li>Creator of the LEXXLY platform</li>
            </ul>
          </div>
          <div class="founder-quote-card">
            <svg class="founder-quote-icon" viewBox="0 0 24 24" fill="currentColor" width="32" height="32">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l0.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l0.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
            <p>"Most firms don't have a marketing problem. They have an oversight problem. Fix that, and everything else follows."</p>
            <span class="founder-attribution">Keith Dyer, Founder</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 8. Qualification + Scarcity -->
  <section class="section-who">
    <div class="container">
      <div class="who-header">
        <span class="who-label">Who We Partner With</span>
        <h2>Built for PI Firms Ready for Strategic Oversight</h2>
        <p class="lead">We work with a limited number of firms at a time. That focus is what drives results.</p>
      </div>
      <div class="who-grid">
        <div class="who-card who-card-not">
          <h3>This Is Not For You If</h3>
          <ul>
            <li>Your firm does under $2M in annual revenue</li>
            <li>You spend under $30K/month on marketing</li>
            <li>You want a one-time project, not an ongoing partnership</li>
            <li>You're not willing to share financial data with your growth partner</li>
            <li>You want to "set it and forget it"</li>
          </ul>
        </div>
        <div class="who-card who-card-yes">
          <h3>This Is For You If</h3>
          <ul>
            <li>You run a PI firm doing $2M to $15M in revenue</li>
            <li>You spend $30K+ per month on marketing</li>
            <li>You're tired of managing vendors yourself</li>
            <li>You want one person accountable for signed cases</li>
            <li>You're ready to treat marketing as a revenue investment</li>
          </ul>
        </div>
      </div>
      <div class="who-scarcity">
        <p>We limit strategic partnerships to 6 to 8 firms at a time.</p>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section-cta">
    <div class="container">
      <div class="cta-content">
        <h2>If You're Ready for Strategic Oversight Instead of Agency Chaos</h2>
        <p>Apply for an Executive Growth Diagnostic. We review your market, your vendors, and your numbers. Then we tell you exactly what to fix.</p>
        <div class="cta-actions">
          <a href="/contact/" class="btn btn-white btn-lg">Apply for Executive Growth Diagnostic</a>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* Hero */
  .hero {
    position: relative;
    background: var(--color-bg-dark);
    color: #fff;
    padding: 4rem 1.5rem 3rem;
    overflow: hidden;
    min-height: 520px;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: right center;
    z-index: 0;
  }
  @media (max-width: 900px) {
    .hero {
      min-height: auto;
    }
    .hero-bg {
      object-position: center center;
    }
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      rgba(1, 25, 7, 0.65) 0%,
      rgba(1, 25, 7, 0.6) 40%,
      rgba(1, 25, 7, 0.5) 100%
    );
  }
  .hero-container {
    position: relative;
    z-index: 2;
  }
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 3rem;
  }
  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }
  .hero-label {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #b0b8b3;
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.12), rgba(100, 116, 139, 0.06));
    border: 1px solid rgba(100, 116, 139, 0.15);
    padding: 0.375rem 1rem;
    border-radius: 100px;
    margin-bottom: 1rem;
  }
  .hero h1 {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.15;
    color: #fff;
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }
  .hero-text {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #b0b8b3;
    margin-bottom: 1rem;
  }
  .hero-scarcity {
    font-size: 0.875rem;
    font-weight: 600;
