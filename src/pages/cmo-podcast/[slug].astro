---
/**
 * CMO Podcast Episode Page
 *
 * Individual episode with audio player, guest info, and show notes
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { cmoEpisodes, getSortedCMOEpisodes, formatDate, type CMOEpisode } from '../../data/cmo-podcast-episodes';
import { podcastPlatforms } from '../../data/podcast-episodes';

export function getStaticPaths() {
  return cmoEpisodes.map((episode) => ({
    params: { slug: episode.slug },
    props: { episode },
  }));
}

interface Props {
  episode: CMOEpisode;
}

const { episode } = Astro.props;

// Get related episodes (previous and next)
const sortedEpisodes = getSortedCMOEpisodes();
const currentIndex = sortedEpisodes.findIndex((e) => e.slug === episode.slug);
const prevEpisode = sortedEpisodes[currentIndex + 1];
const nextEpisode = sortedEpisodes[currentIndex - 1];

// Parse duration to ISO 8601 format
function parseDuration(duration: string): string {
  const match = duration.match(/(\d+)/);
  if (match) {
    return `PT${match[1]}M`;
  }
  return 'PT30M';
}

// PodcastEpisode Schema
const episodeSchema = {
  '@context': 'https://schema.org',
  '@type': 'PodcastEpisode',
  name: episode.title,
  description: episode.longDescription || episode.description,
  url: `https://lexgro.com/cmo-podcast/${episode.slug}/`,
  datePublished: episode.pubDate,
  duration: parseDuration(episode.duration),
  episodeNumber: episode.number,
  partOfSeries: {
    '@type': 'PodcastSeries',
    name: 'The CMO Podcast',
    url: 'https://lexgro.com/cmo-podcast/',
  },
  author: {
    '@type': 'Person',
    name: episode.guest,
    jobTitle: episode.guestTitle,
    worksFor: {
      '@type': 'Organization',
      name: episode.guestFirm,
    },
  },
};
---

<BaseLayout
  title={`${episode.title} | The CMO Podcast`}
  description={episode.description}
  image="/og/podcast.png"
>
  <script type="application/ld+json" set:html={JSON.stringify(episodeSchema)} />

  <!-- Episode Header -->
  <section class="episode-header">
    <div class="container">
      <a href="/cmo-podcast/" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        All Episodes
      </a>

      <div class="episode-info">
        <span class="episode-badge">Episode {episode.number}</span>
        <h1 class="episode-title">{episode.title}</h1>
        <div class="episode-meta">
          <span class="meta-item">{episode.duration}</span>
          <span class="meta-divider">|</span>
          <span class="meta-item">{formatDate(episode.pubDate)}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Audio Player Placeholder -->
  <section class="player-section">
    <div class="container">
      <div class="player-card">
        <div class="player-placeholder">
          <div class="play-button">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
          </div>
          <div class="player-info">
            <p class="player-text">Listen to this episode</p>
            <div class="platform-buttons">
              <a href={podcastPlatforms.apple} class="platform-btn" target="_blank" rel="noopener">Apple Podcasts</a>
              <a href={podcastPlatforms.spotify} class="platform-btn" target="_blank" rel="noopener">Spotify</a>
              <a href={podcastPlatforms.youtube} class="platform-btn" target="_blank" rel="noopener">YouTube</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Episode Content -->
  <section class="content-section">
    <div class="container">
      <div class="content-layout">
        <div class="main-content">
          <h2 class="content-heading">About This Episode</h2>
          <p class="episode-description">{episode.longDescription}</p>

          <h2 class="content-heading">Topics Discussed</h2>
          <div class="topics-list">
            {episode.topics.map((topic) => (
              <span class="topic-tag">{topic}</span>
            ))}
          </div>
        </div>

        <aside class="sidebar">
          <!-- Guest Card -->
          <div class="guest-card">
            <h3 class="sidebar-title">Featured Guest</h3>
            <div class="guest-avatar-large">
              <span>{episode.guest.split(' ').map(n => n[0]).join('')}</span>
            </div>
            <div class="guest-info">
              <span class="guest-name">{episode.guest}</span>
              <span class="guest-role">{episode.guestTitle}</span>
              <span class="guest-firm">{episode.guestFirm}</span>
            </div>
          </div>

          <!-- Subscribe Card -->
          <div class="sidebar-card">
            <h3 class="sidebar-title">Subscribe</h3>
            <p class="sidebar-text">Never miss conversations with law firm marketing leaders.</p>
            <div class="subscribe-links">
              <a href={podcastPlatforms.apple} class="subscribe-link" target="_blank" rel="noopener">Apple Podcasts</a>
              <a href={podcastPlatforms.spotify} class="subscribe-link" target="_blank" rel="noopener">Spotify</a>
              <a href={podcastPlatforms.youtube} class="subscribe-link" target="_blank" rel="noopener">YouTube</a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Episode Navigation -->
  <section class="nav-section">
    <div class="container">
      <div class="episode-nav">
        {prevEpisode ? (
          <a href={`/cmo-podcast/${prevEpisode.slug}/`} class="nav-card nav-prev">
            <span class="nav-label">Previous Episode</span>
            <span class="nav-title">{prevEpisode.title}</span>
          </a>
        ) : <div></div>}

        {nextEpisode ? (
          <a href={`/cmo-podcast/${nextEpisode.slug}/`} class="nav-card nav-next">
            <span class="nav-label">Next Episode</span>
            <span class="nav-title">{nextEpisode.title}</span>
          </a>
        ) : <div></div>}
      </div>
    </div>
  </section>

  <!-- Related Podcast -->
  <section class="related-section">
    <div class="container">
      <div class="related-card">
        <div class="related-content">
          <h3 class="related-title">Want Marketing How-To Content?</h3>
          <p class="related-description">
            Check out the Law Firm Growth Podcast for actionable marketing tactics and strategies.
          </p>
        </div>
        <a href="/podcast/" class="btn btn-secondary">
          Browse Episodes
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Transform Your Marketing?</h2>
        <p class="cta-subtitle">
          Get personalized guidance from the LEXGRO team.
        </p>
        <a href="/contact/" class="btn btn-primary btn-lg">
          Schedule a Free Consultation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Episode Header */
  .episode-header {
    padding: 3rem 0 2rem;
    background: linear-gradient(180deg, #fafafa 0%, white 100%);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #4b5563;
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .episode-badge {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .episode-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
    max-width: 800px;
  }

  .episode-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .meta-item {
    font-size: 0.9375rem;
    color: #4b5563;
  }

  .meta-divider {
    color: var(--color-border);
  }

  /* Player Section */
  .player-section {
    padding: 0 0 3rem;
    background: white;
  }

  .player-card {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-teal) 100%);
    border-radius: 20px;
    padding: 2rem;
  }

  .player-placeholder {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .play-button {
    width: 72px;
    height: 72px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .play-button:hover {
    transform: scale(1.05);
  }

  .play-button svg {
    margin-left: 4px;
  }

  .player-info {
    color: white;
  }

  .player-text {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .platform-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .platform-btn {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .platform-btn:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  /* Content Section */
  .content-section {
    padding: 3rem 0 5rem;
    background: white;
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 900px) {
    .content-layout {
      grid-template-columns: 1fr 320px;
    }
  }

  .content-heading {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .content-heading:first-child {
    margin-top: 0;
  }

  .episode-description {
    font-size: 1.0625rem;
    color: #4b5563;
    line-height: 1.7;
  }

  .topics-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .topic-tag {
    padding: 0.5rem 1rem;
    background: #fafafa;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-dark);
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .guest-card {
    background: var(--color-bg-dark);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
  }

  .guest-card .sidebar-title {
    color: #b0b8b3;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }

  .guest-avatar-large {
    width: 80px;
    height: 80px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .guest-avatar-large span {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .guest-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .guest-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
  }

  .guest-role {
    font-size: 0.9375rem;
    color: #b0b8b3;
  }

  .guest-firm {
    font-size: 0.875rem;
    color: #b0b8b3;
  }

  .sidebar-card {
    background: #fafafa;
    padding: 1.5rem;
    border-radius: 16px;
  }

  .sidebar-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .sidebar-text {
    font-size: 0.875rem;
    color: #4b5563;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .subscribe-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .subscribe-link {
    padding: 0.625rem 1rem;
    background: white;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-dark);
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
  }

  .subscribe-link:hover {
    background: var(--color-primary);
    color: white;
  }

  /* Episode Navigation */
  .nav-section {
    padding: 3rem 0;
    background: #fafafa;
  }

  .episode-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .nav-card {
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .nav-prev {
    text-align: left;
  }

  .nav-next {
    text-align: right;
  }

  .nav-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .nav-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-dark);
    line-height: 1.4;
  }

  /* Related Section */
  .related-section {
    padding: 3rem 0;
    background: white;
  }

  .related-card {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 2rem;
    background: #fafafa;
    border-radius: 16px;
  }

  .related-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.25rem;
  }

  .related-description {
    font-size: 0.9375rem;
    color: #4b5563;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
    text-align: center;
  }

  .cta-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    color: #b0b8b3;
    margin-bottom: 2rem;
  }
</style>
