---
/**
 * Podcast Episode Page
 *
 * Individual episode with audio player, show notes, and related episodes
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { episodes, getSortedEpisodes, formatDate, podcastPlatforms, type Episode } from '../../data/podcast-episodes';

export function getStaticPaths() {
  return episodes.map((episode) => ({
    params: { slug: episode.slug },
    props: { episode },
  }));
}

interface Props {
  episode: Episode;
}

const { episode } = Astro.props;

// Get related episodes (previous and next)
const sortedEpisodes = getSortedEpisodes();
const currentIndex = sortedEpisodes.findIndex((e) => e.slug === episode.slug);
const prevEpisode = sortedEpisodes[currentIndex + 1];
const nextEpisode = sortedEpisodes[currentIndex - 1];
---

<BaseLayout
  title={`${episode.title} | The Law Firm Growth Podcast`}
  description={episode.description}
  image="/og/podcast.png"
>
  <!-- Episode Header -->
  <section class="episode-header">
    <div class="container">
      <a href="/podcast/" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        All Episodes
      </a>

      <div class="episode-info">
        <span class="episode-badge">Episode {episode.number}</span>
        <h1 class="episode-title">{episode.title}</h1>
        <div class="episode-meta">
          <span class="meta-item">{episode.duration}</span>
          <span class="meta-divider">|</span>
          <span class="meta-item">{formatDate(episode.pubDate)}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Video/Audio Player -->
  <section class="player-section">
    <div class="container">
      {episode.youtubeId ? (
        <div class="video-container">
          <iframe
            src={`https://www.youtube.com/embed/${episode.youtubeId}`}
            title={episode.title}
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      ) : (
        <div class="player-card">
          <div class="player-placeholder">
            <div class="play-button">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
            </div>
            <div class="player-info">
              <p class="player-text">Listen to this episode</p>
              <div class="platform-buttons">
                <a href={podcastPlatforms.apple} class="platform-btn" target="_blank" rel="noopener">Apple Podcasts</a>
                <a href={podcastPlatforms.spotify} class="platform-btn" target="_blank" rel="noopener">Spotify</a>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Episode Content -->
  <section class="content-section">
    <div class="container">
      <div class="content-layout">
        <div class="main-content">
          <h2 class="content-heading">About This Episode</h2>
          <p class="episode-description">{episode.longDescription}</p>

          <h2 class="content-heading">Topics Covered</h2>
          <div class="topics-list">
            {episode.topics.map((topic) => (
              <span class="topic-tag">{topic}</span>
            ))}
          </div>

          {episode.guest && (
            <>
              <h2 class="content-heading">Guest</h2>
              <p class="guest-name">{episode.guest}</p>
            </>
          )}
        </div>

        <aside class="sidebar">
          <div class="sidebar-card">
            <h3 class="sidebar-title">Subscribe</h3>
            <p class="sidebar-text">Never miss an episode of marketing insights for law firms.</p>
            <div class="subscribe-links">
              <a href={podcastPlatforms.apple} class="subscribe-link" target="_blank" rel="noopener">Apple Podcasts</a>
              <a href={podcastPlatforms.spotify} class="subscribe-link" target="_blank" rel="noopener">Spotify</a>
              <a href={podcastPlatforms.youtube} class="subscribe-link" target="_blank" rel="noopener">YouTube</a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Episode Navigation -->
  <section class="nav-section">
    <div class="container">
      <div class="episode-nav">
        {prevEpisode ? (
          <a href={`/podcast/${prevEpisode.slug}/`} class="nav-card nav-prev">
            <span class="nav-label">Previous Episode</span>
            <span class="nav-title">{prevEpisode.title}</span>
          </a>
        ) : <div></div>}

        {nextEpisode ? (
          <a href={`/podcast/${nextEpisode.slug}/`} class="nav-card nav-next">
            <span class="nav-label">Next Episode</span>
            <span class="nav-title">{nextEpisode.title}</span>
          </a>
        ) : <div></div>}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow Your Law Firm?</h2>
        <p class="cta-subtitle">
          Get personalized marketing guidance from the LEXGRO team.
        </p>
        <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
          Schedule a Free Consultation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Episode Header */
  .episode-header {
    padding: 3rem 0 2rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0%, white 100%);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .episode-badge {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .episode-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
    max-width: 800px;
  }

  .episode-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .meta-item {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }

  .meta-divider {
    color: var(--color-border);
  }

  /* Player Section */
  .player-section {
    padding: 0 0 3rem;
    background: white;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border-radius: 20px;
    background: var(--color-bg-dark);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .player-card {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-teal) 100%);
    border-radius: 20px;
    padding: 2rem;
  }

  .player-placeholder {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .play-button {
    width: 72px;
    height: 72px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .play-button:hover {
    transform: scale(1.05);
  }

  .play-button svg {
    margin-left: 4px;
  }

  .player-info {
    color: white;
  }

  .player-text {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .platform-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .platform-btn {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .platform-btn:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  /* Content Section */
  .content-section {
    padding: 3rem 0 5rem;
    background: white;
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 900px) {
    .content-layout {
      grid-template-columns: 1fr 300px;
    }
  }

  .content-heading {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .content-heading:first-child {
    margin-top: 0;
  }

  .episode-description {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .topics-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .topic-tag {
    padding: 0.5rem 1rem;
    background: var(--color-bg-light);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-dark);
  }

  .guest-name {
    font-size: 1.0625rem;
    color: var(--color-text-dark);
    font-weight: 500;
  }

  /* Sidebar */
  .sidebar-card {
    background: var(--color-bg-light);
    padding: 1.5rem;
    border-radius: 16px;
    position: sticky;
    top: 100px;
  }

  .sidebar-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .sidebar-text {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .subscribe-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .subscribe-link {
    padding: 0.625rem 1rem;
    background: white;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-dark);
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
  }

  .subscribe-link:hover {
    background: var(--color-primary);
    color: white;
  }

  /* Episode Navigation */
  .nav-section {
    padding: 3rem 0;
    background: var(--color-bg-light);
  }

  .episode-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .nav-card {
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .nav-prev {
    text-align: left;
  }

  .nav-next {
    text-align: right;
  }

  .nav-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .nav-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-dark);
    line-height: 1.4;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
    text-align: center;
  }

  .cta-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }
</style>
