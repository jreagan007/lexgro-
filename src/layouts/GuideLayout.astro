    font-size: 0.8125rem;
    padding-left: 1.5rem;
    margin-left: -0.75rem;
  }

  /* Sidebar CTA */
  .sidebar-cta {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.25rem;
    text-align: center;
  }

