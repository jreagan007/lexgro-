---
/**
 * CMO Podcast Index Page
 *
 * Conversations with law firm marketing executives
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { cmoEpisodes, getSortedCMOEpisodes, formatDate } from '../../data/cmo-podcast-episodes';

const sortedEpisodes = getSortedCMOEpisodes();
const latestEpisode = sortedEpisodes[0];
---

<BaseLayout
  title="The CMO Podcast | Law Firm Marketing Leaders"
  description="Candid conversations with law firm CMOs and marketing directors. Learn how top firms build and lead their marketing organizations."
  image="/og/podcast.png"
>
  <!-- Hero Section -->
  <section class="podcast-hero">
    <div class="container">
      <div class="hero-content">
        <span class="section-label">Podcast Series</span>
        <h1 class="hero-title">The CMO Podcast</h1>
        <p class="hero-subtitle">
          Candid conversations with law firm CMOs and marketing directors. Learn how the best firms build, lead, and scale their marketing organizations.
        </p>
        <div class="subscribe-buttons">
          <a href="#" class="subscribe-btn">Apple Podcasts</a>
          <a href="#" class="subscribe-btn">Spotify</a>
          <a href="#" class="subscribe-btn">YouTube</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Episode -->
  <section class="latest-section">
    <div class="container">
      <div class="latest-card">
        <div class="latest-badge">Latest Episode</div>
        <div class="latest-content">
          <span class="episode-number">Episode {latestEpisode.number}</span>
          <h2 class="latest-title">{latestEpisode.title}</h2>
          <p class="latest-description">{latestEpisode.description}</p>
          <div class="guest-info">
            <div class="guest-avatar">
              <span>{latestEpisode.guest.split(' ').map(n => n[0]).join('')}</span>
            </div>
            <div class="guest-details">
              <span class="guest-name">{latestEpisode.guest}</span>
              <span class="guest-title">{latestEpisode.guestTitle}, {latestEpisode.guestFirm}</span>
            </div>
          </div>
          <div class="latest-meta">
            <span class="meta-item">{latestEpisode.duration}</span>
            <span class="meta-divider">|</span>
            <span class="meta-item">{formatDate(latestEpisode.pubDate)}</span>
          </div>
          <a href={`/cmo-podcast/${latestEpisode.slug}/`} class="btn btn-primary">
            Listen Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- All Episodes -->
  <section class="episodes-section">
    <div class="container">
      <h2 class="section-title">All Episodes</h2>

      <div class="episodes-list">
        {sortedEpisodes.map((episode) => (
          <a href={`/cmo-podcast/${episode.slug}/`} class="episode-card">
            <div class="episode-number-badge">
              <span>{String(episode.number).padStart(2, '0')}</span>
            </div>
            <div class="episode-content">
              <h3 class="episode-title">{episode.title}</h3>
              <p class="episode-description">{episode.description}</p>
              <div class="episode-guest">
                <span class="guest-name-small">{episode.guest}</span>
                <span class="guest-title-small">{episode.guestTitle}</span>
              </div>
            </div>
            <div class="episode-meta-side">
              <span class="episode-duration">{episode.duration}</span>
              <span class="episode-date">{formatDate(episode.pubDate)}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <span class="section-label">About The Show</span>
          <h2 class="about-title">Real Talk from Marketing Leaders</h2>
          <p class="about-description">
            The CMO Podcast goes beyond tactics to explore the real challenges of leading marketing at a law firm. Our guests are CMOs, marketing directors, and VPs who share their experiences building teams, managing budgets, navigating firm politics, and driving growth.
          </p>
          <p class="about-description">
            Whether you're a solo marketing manager or leading a team of 20, you'll find actionable insights and honest perspectives you won't hear anywhere else.
          </p>
        </div>
        <div class="about-topics">
          <h3 class="topics-title">Topics We Cover</h3>
          <ul class="topics-list">
            <li>Building and scaling marketing teams</li>
            <li>Budget management and ROI reporting</li>
            <li>Working with firm leadership</li>
            <li>Vendor and agency management</li>
            <li>Career development for marketers</li>
            <li>Technology and operations</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Cross-Promo -->
  <section class="promo-section">
    <div class="container">
      <div class="promo-card">
        <div class="promo-content">
          <h3 class="promo-title">Looking for Marketing Tactics?</h3>
          <p class="promo-description">
            Check out our main podcast for actionable marketing strategies and how-to guides.
          </p>
        </div>
        <a href="/podcast/" class="btn btn-secondary">
          Law Firm Growth Podcast
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Be a Guest on the Show</h2>
        <p class="cta-subtitle">
          Are you a law firm CMO or marketing director? We'd love to hear your story.
        </p>
        <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
          Apply to Be a Guest
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .podcast-hero {
    padding: 5rem 0 3rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0 percent, white 100 percent);
  }

  .hero-content {
    max-width: 650px;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .subscribe-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .subscribe-btn {
    padding: 0.625rem 1.25rem;
    background: var(--color-bg-dark);
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 100px;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .subscribe-btn:hover {
    background: var(--color-primary);
  }

  /* Latest Section */
  .latest-section {
    padding: 0 0 4rem;
    background: white;
  }

  .latest-card {
    background: linear-gradient(135deg, var(--color-primary) 0 percent, var(--color-teal) 100 percent);
    border-radius: 24px;
    padding: 3rem;
    position: relative;
  }

  .latest-badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .latest-content {
    max-width: 600px;
  }

  .episode-number {
    font-size: 0.875rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    display: block;
  }

  .latest-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .latest-description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .guest-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .guest-avatar {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50 percent;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 0.875rem;
  }

  .guest-details {
    display: flex;
    flex-direction: column;
  }

  .guest-name {
    font-weight: 600;
    color: white;
  }

  .guest-title {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .latest-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .meta-item {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .meta-divider {
    color: rgba(255, 255, 255, 0.4);
  }

  .latest-card .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  /* Episodes Section */
  .episodes-section {
    padding: 4rem 0;
    background: var(--color-bg-light);
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 2rem;
  }

  .episodes-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .episode-card {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1.5rem;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .episode-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
  }

  .episode-number-badge {
    width: 56px;
    height: 56px;
    background: var(--color-bg-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .episode-number-badge span {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--color-primary);
  }

  .episode-content {
    min-width: 0;
  }

  .episode-title {
    font-size: 1.0625rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .episode-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .episode-guest {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .guest-name-small {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-dark);
  }

  .guest-title-small {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .episode-meta-side {
    text-align: right;
  }

  .episode-duration {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .episode-date {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  /* About Section */
  .about-section {
    padding: 5rem 0;
    background: white;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 900px) {
    .about-grid {
      grid-template-columns: 1.5fr 1fr;
    }
  }

  .about-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1.5rem;
  }

  .about-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .about-topics {
    padding: 2rem;
    background: var(--color-bg-light);
    border-radius: 16px;
  }

  .topics-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
  }

  .topics-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .topics-list li {
    padding: 0.625rem 0;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .topics-list li::before {
    content: "";
    width: 6px;
    height: 6px;
    background: var(--color-primary);
    border-radius: 50 percent;
  }

  .topics-list li:last-child {
    border-bottom: none;
  }

  /* Promo Section */
  .promo-section {
    padding: 0 0 4rem;
    background: white;
  }

  .promo-card {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--color-bg-light);
    border-radius: 16px;
  }

  .promo-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.25rem;
  }

  .promo-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }

  /* CTA */
  .cta-section {
    padding: 5rem 0;
    background: var(--color-bg-dark);
    text-align: center;
  }

  .cta-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .episode-card {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .episode-number-badge {
      width: 48px;
      height: 48px;
    }

    .episode-meta-side {
      text-align: left;
      display: flex;
      gap: 1rem;
    }
  }
</style>
