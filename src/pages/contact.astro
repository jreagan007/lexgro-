---
/**
 * Contact Page
 *
 * Lead capture with contact form and Calendly embed.
 * Designed for conversions with clear CTAs.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Images
import keithPhoto from '../assets/images/sections/keith-cmo-photo.png';

const contactMethods = [
  {
    icon: 'calendar',
    title: 'Schedule a Call',
    description: 'Book a free strategy session to discuss your firm\'s growth goals.',
    cta: 'Book Now',
    href: 'https://calendly.com/lexgro/strategy-session',
  },
  {
    icon: 'email',
    title: 'Send a Message',
    description: 'Have a question? Fill out the form and we\'ll respond within 24 hours.',
    cta: 'Contact Form Below',
    href: '#contact-form',
  },
  {
    icon: 'phone',
    title: 'Give Us a Call',
    description: 'Prefer to talk? Reach out directly during business hours.',
    cta: 'Call Now',
    href: 'tel:+1-555-LEXGRO',
  },
];

const faqs = [
  {
    question: 'What happens during a strategy call?',
    answer: 'We\'ll discuss your current marketing challenges, goals, and explore whether LEXGRO is the right fit for your firm. No pressure, no sales pitch. Just an honest conversation about growth.',
  },
  {
    question: 'How quickly can you start?',
    answer: 'Most engagements can begin within 1-2 weeks of our initial conversation. We\'ll create a customized timeline based on your needs.',
  },
  {
    question: 'Do you work with firms outside the US?',
    answer: 'Our primary focus is US-based law firms, but we have worked with firms in Canada and the UK. Reach out to discuss your specific situation.',
  },
];
---

<BaseLayout
  title="Contact LEXGRO"
  description="Schedule a free strategy session with LEXGRO. Discuss your law firm's marketing challenges and discover how we can help you grow predictably."
  image="/og/contact.png"
>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="container">
      <div class="hero-content">
        <span class="section-label">Get In Touch</span>
        <h1 class="hero-title">Let's Talk Growth</h1>
        <p class="hero-subtitle">
          Ready to build predictable revenue for your law firm? We're here to help.
          Choose how you'd like to connect.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="methods-section">
    <div class="container">
      <div class="methods-grid">
        {contactMethods.map((method) => (
          <a href={method.href} class="method-card">
            <div class="method-icon">
              {method.icon === 'calendar' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
              )}
              {method.icon === 'email' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 0.9 2 2v12c0 1.1-0.9 2-2 2H4c-1.1 0-2-0.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              )}
              {method.icon === 'phone' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 0.7 2.81 2 2 0 0 1-0.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-0.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              )}
            </div>
            <h3 class="method-title">{method.title}</h3>
            <p class="method-description">{method.description}</p>
            <span class="method-cta">{method.cta} â†’</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="contact-main">
    <div class="container">
      <div class="contact-layout">
        <!-- Form Side -->
        <div class="contact-form-wrapper" id="contact-form">
          <h2 class="form-title">Send Us a Message</h2>
          <p class="form-subtitle">
            Fill out the form below and we'll get back to you within 24 hours.
          </p>

          <form class="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required />
              </div>
              <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required />
              </div>
            </div>

            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone" />
            </div>

            <div class="form-group">
              <label for="firmName">Law Firm Name *</label>
              <input type="text" id="firmName" name="firmName" required />
            </div>

            <div class="form-group">
              <label for="practiceArea">Primary Practice Area</label>
              <select id="practiceArea" name="practiceArea">
                <option value="">Select a practice area</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="family-law">Family Law</option>
                <option value="immigration">Immigration</option>
                <option value="estate-planning">Estate Planning</option>
                <option value="bankruptcy">Bankruptcy</option>
                <option value="criminal-defense">Criminal Defense</option>
                <option value="workers-comp">Workers' Compensation</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">How Can We Help? *</label>
              <textarea id="message" name="message" rows="4" required placeholder="Tell us about your marketing goals and challenges..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-lg submit-btn">
              Send Message
            </button>

            <p class="form-disclaimer">
              By submitting this form, you agree to our <a href="/privacy/">Privacy Policy</a>.
            </p>
          </form>
        </div>

        <!-- Info Side -->
        <div class="contact-info">
          <div class="info-card">
            <div class="info-header">
              <Image
                src={keithPhoto}
                alt="Keith Dyer"
                class="info-avatar"
                width={80}
              />
              <div>
                <h3 class="info-name">Keith Dyer</h3>
                <p class="info-title">President and Fractional CMO</p>
              </div>
            </div>
            <p class="info-text">
              "I personally review every inquiry that comes through. If LEXGRO
              can help your firm grow, I'll make sure you hear from us quickly."
            </p>
          </div>

          <div class="faq-section">
            <h3 class="faq-heading">Common Questions</h3>
            {faqs.map((faq) => (
              <div class="faq-item">
                <h4 class="faq-question">{faq.question}</h4>
                <p class="faq-answer">{faq.answer}</p>
              </div>
            ))}
          </div>

          <div class="calendar-promo">
            <h3 class="promo-title">Prefer to Talk?</h3>
            <p class="promo-text">
              Skip the form and book a free 15-minute strategy call directly on my calendar.
            </p>
            <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-secondary">
              View Available Times
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Stop Guessing?</h2>
        <p class="cta-subtitle">
          Join the law firms that have achieved predictable, sustainable growth with LEXGRO.
        </p>
        <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
          Schedule Your Free Strategy Call
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .contact-hero {
    padding: 6rem 0 4rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0 percent, white 100 percent);
    text-align: center;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .section-label {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }

  .hero-title {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-text-dark);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Methods Section */
  .methods-section {
    padding: 0 0 4rem;
    background: white;
    margin-top: -2rem;
  }

  .methods-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .methods-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .method-card {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: block;
  }

  .method-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(41, 140, 66, 0.12);
    border-color: var(--color-primary);
    text-decoration: none;
  }

  .method-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #E8F5E9 0 percent, #C8E6C9 100 percent);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    margin-bottom: 1.25rem;
  }

  .method-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .method-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .method-cta {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  /* Main Contact Section */
  .contact-main {
    padding: 4rem 0 6rem;
    background: var(--color-bg-light);
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1000px) {
    .contact-layout {
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
    }
  }

  /* Form Styles */
  .contact-form-wrapper {
    background: white;
    padding: 2.5rem;
    border-radius: 24px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .form-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .form-subtitle {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }

  @media (min-width: 500px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    background: white;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(41, 140, 66, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    margin-top: 0.5rem;
  }

  .form-disclaimer {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    text-align: center;
  }

  .form-disclaimer a {
    color: var(--color-primary);
  }

  /* Info Side */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .info-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .info-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50 percent;
    object-fit: cover;
  }

  .info-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.125rem;
  }

  .info-title {
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 500;
  }

  .info-text {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    font-style: italic;
  }

  /* FAQ Section */
  .faq-section {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .faq-heading {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1.5rem;
  }

  .faq-item {
    padding-bottom: 1.25rem;
    margin-bottom: 1.25rem;
    border-bottom: 1px solid var(--color-border);
  }

  .faq-item:last-child {
    padding-bottom: 0;
    margin-bottom: 0;
    border-bottom: none;
  }

  .faq-question {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .faq-answer {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Calendar Promo */
  .calendar-promo {
    background: var(--color-bg-dark);
    padding: 2rem;
    border-radius: 20px;
    text-align: center;
  }

  .promo-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .promo-text {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .calendar-promo .btn-secondary {
    border-color: white;
    color: white;
  }

  .calendar-promo .btn-secondary:hover {
    background: white;
    color: var(--color-bg-dark);
  }

  /* Final CTA */
  .final-cta {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--color-primary) 0 percent, var(--color-teal) 100 percent);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .final-cta .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .final-cta .btn-primary:hover {
    background: rgba(255, 255, 255, 0.9);
  }
</style>
