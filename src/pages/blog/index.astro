/**
 * Blog Index Page
 *
 * Lists all blog posts with category filtering.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts sorted by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Separate featured and regular posts
// Only the FIRST featured post goes in the featured slot
// All other posts (including other featured ones) go in the regular grid
const featuredPost = sortedPosts.find(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => post !== featuredPost);

// Get unique categories
const allCategories = [...new Set(allPosts.map(post => post.data.category || 'General'))];

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
}

// Get unique card image for each post from generated cards
function getPostCardImage(slug: string): string {
  return `/cards/blog/${slug}.png`;
}

// Category display names
const categoryNames: Record<string, string> = {
  'fractional-cmo': 'Fractional CMO',
  'marketing-strategy': 'Strategy',
  'practice-areas': 'Practice Areas',
  'practice-area-marketing': 'Practice Areas',
  'seo': 'SEO',
  'budgeting': 'Budget and ROI',
  'lead-generation': 'Lead Generation',
  'sales': 'Sales Training',
  'digital-marketing': 'Digital Marketing',
};

function getCategoryDisplay(category: string): string {
  return categoryNames[category] || category.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
}

// Extract keyword-focused alt text from title (part before colon/dash)
function getKeywordAlt(title: string): string {
  // Get main keyword phrase (before : or - or |)
  const mainPhrase = title.split(/[:\-|]/)[0].trim();
  return mainPhrase || title;
}
---

<BaseLayout
  title="Law Firm Marketing Blog"
  description="Marketing insights for law firm owners. Learn fractional CMO strategies, SEO tactics, and growth systems from Keith Dyer and the LEXGRO team."
  image="/og/blog.png"
>
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container">
      <span class="section-label">LEXGRO Blog</span>
      <h1 class="hero-title">Industry Insights</h1>
      <p class="hero-subtitle">
        Strategies, tactics, and real-world insights for law firm growth.
        No fluff. Just what actually works.
      </p>
    </div>
  </section>

  <!-- Categories -->
  <section class="categories-section">
    <div class="container">
      <div class="categories-scroll">
        <button class="category-btn active" data-category="all">All Posts</button>
        {allCategories.map((category) => (
          <button class="category-btn" data-category={category}>
            {getCategoryDisplay(category)}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="featured-section" data-category={featuredPost.data.category}>
      <div class="container">
        <a href={`/blog/${featuredPost.data.slug}/`} class="featured-card">
          <div class="featured-image">
            <img
              src={getPostCardImage(featuredPost.data.slug)}
              alt={getKeywordAlt(featuredPost.data.title)}
              width="800"
              height="450"
              class="featured-img"
              loading="eager"
            />
            <span class="featured-badge">Featured</span>
          </div>
          <div class="featured-content">
            <span class="post-category">{getCategoryDisplay(featuredPost.data.category)}</span>
            <h2 class="featured-title">{featuredPost.data.title}</h2>
            <p class="featured-excerpt">{featuredPost.data.description}</p>
            <div class="post-meta">
              <span class="post-date">{formatDate(featuredPost.data.pubDate)}</span>
              <span class="read-more">Read Article â†’</span>
            </div>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- Blog Grid -->
  <section class="blog-grid-section">
    <div class="container">
      <h2 class="grid-title">Latest Articles</h2>
      <div class="blog-grid">
        {regularPosts.map((post, index) => (
          <a href={`/blog/${post.data.slug}/`} class="blog-card" data-category={post.data.category}>
            <div class="card-image">
              <img
                src={getPostCardImage(post.data.slug)}
                alt={getKeywordAlt(post.data.title)}
                width="400"
                height="225"
                class="card-img"
                loading="lazy"
              />
            </div>
            <div class="card-content">
              <span class="post-category">{getCategoryDisplay(post.data.category)}</span>
              <h3 class="card-title">{post.data.title}</h3>
              <p class="card-excerpt">{post.data.description}</p>
              <span class="post-date">{formatDate(post.data.pubDate)}</span>
            </div>
          </a>
        ))}
      </div>

      <p class="posts-count"><span id="visible-count">{regularPosts.length}</span> of {regularPosts.length} articles</p>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="newsletter-section">
    <div class="container">
      <div class="newsletter-content">
        <span class="section-label-dark">Stay Updated</span>
        <h2 class="newsletter-title">Get Marketing Insights Delivered</h2>
        <p class="newsletter-subtitle">
          Join 2,000+ law firm owners who receive our weekly insights on
          marketing strategy, growth tactics, and industry trends.
        </p>
        <form class="newsletter-form" action="#" method="POST">
          <input
            type="email"
            placeholder="Enter your email"
            required
            class="newsletter-input"
          />
          <button type="submit" class="btn btn-primary">Subscribe</button>
        </form>
        <p class="newsletter-disclaimer">
          No spam. Unsubscribe anytime. We respect your inbox.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Implement These Strategies?</h2>
        <p class="cta-subtitle">
          Reading is great, but results come from action. Let's talk about
          how to put these insights to work for your firm.
        </p>
        <a href="https://calendly.com/lexgro/strategy-session" class="btn btn-primary btn-lg">
          Schedule a Strategy Call
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Category filtering
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.category-btn');
    const cards = document.querySelectorAll('.blog-card');
    const featured = document.querySelector('.featured-section');
    const countEl = document.getElementById('visible-count');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active state
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const category = btn.dataset.category;
        let visibleCount = 0;

        // Filter cards
        cards.forEach(card => {
          const cardCategory = (card as HTMLElement).dataset.category;
          if (category === 'all' || cardCategory === category) {
            (card as HTMLElement).style.display = '';
            visibleCount++;
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        });

        // Filter featured
        if (featured) {
          const featuredCategory = (featured as HTMLElement).dataset.category;
          if (category === 'all' || featuredCategory === category) {
            (featured as HTMLElement).style.display = '';
          } else {
            (featured as HTMLElement).style.display = 'none';
          }
        }

        // Update count
        if (countEl) {
          countEl.textContent = String(visibleCount);
        }
      });
    });
  });
</script>

